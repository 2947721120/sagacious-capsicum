<div class="row-fluid">
  <div class="span12">
    <span class="span6">
      <strong>Title:</strong>
         {{{instance.title}}}
    </span>
    <span class="span3">
      <strong>Started:</strong>
      {{{localize_date instance.start_date}}}
    </span>
    <span class="span3">
      <strong>Completed:</strong>
      {{{localize_date instance.end_date}}}
    </span>
  </div>
  <div class="span12">
    <strong>Description:</strong>
    {{{instance.description}}}
  </div>
  <div class="span6">
    <strong>Risk Manager:</strong>
    {{#using person=instance.ra_manager}}{{{render '/static/mustache/people/popover.mustache'}}}{{/using}}
  </div>
  <div class="span6">
    <strong>Risk Counsel:</strong>
    {{#using person=instance.ra_counsel}}{{{render '/static/mustache/people/popover.mustache'}}}{{/using}}
  </div>
  <div class="span12">
    <strong>Notes:</strong>
    {{{instance.notes}}}
  </div>
  <div class="span12">
    <strong>Files:</strong>
    TODO
  </div>

  {{#is_allowed 'update'}}
  <div class="span12">
    <a href="javascript://" class="info-edit" data-toggle="modal-ajax-form" data-object-plural="{{model.table_plural}}" data-object-singular="{{model.model_singular}}" data-modal-reset="reset" data-modal-class="modal-wide" title="Edit {{model.model_title}}" data-object-id="{{instance.id}}">
      <i class="grcicon-edit"></i>
      <span>Edit {{model.model_title}}</span>
    </a>
  </div>
  {{/is_allowed}}

</div>

