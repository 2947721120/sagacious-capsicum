-extends "layouts/dashboard.haml"

-block title
  Admin Dashboard

-block page_help
  admin

-block header
  %ul.breadcrumbs
    &nbsp;

  %h1.dashboard-title
    %i.grciconlarge-dashboard
    Admin Dashboard

-block subheader_extras
  %ul.actions.pull-right
    %li.btn-group
      %a.dropdown-toggle{ 'href': '#', 'data-toggle': 'dropdown' }
        %i.grcicon-imp-exp
        %span Import/Export
        %span.caret
      %ul.dropdown-menu
        %li.title
          Systems
        %li
          %a{ 'href': "/systems/import" }
            %i.grcicon-system-color
            %span Import Systems
        %li
          %a{ "data-toggle": "modal-ajax", 'href': "/systems/export.html" }
            %i.grcicon-system-color
            %span Export Systems
        %li.divider
        %li.title
          Processes
        %li
          %a{ 'href': "/systems/import?is_biz_process=1" }
            %i.grcicon-process-color
            %span Import Processes
        %li
          %a{ "data-toggle": "modal-ajax", 'href': "/systems/export.html?is_biz_process=1" }
            %i.grcicon-process-color
            %span Export Processes
        %li.divider
        %li.title
          Risks
        %li
          %a{ 'href': "/risks/import" }
            %i.grcicon-risk-color
            %span Import Risks
        %li
          %a{ "data-toggle": "modal-ajax", 'href': "/risks/export.html" }
            %i.grcicon-risk-color
            %span Export Risks

-block main
  .container-fluid
    #columns.row-fluid{ 'data-resize': "true" }
      #left-column.span6.widget-area
        -with widget_class = 'widget-tabs'
          -include 'admin/_people.haml'
          -include 'admin/_roles.haml'

      #right_column.span6.widget-area
