-# People Selector
#selectorPeople{ 'class': 'modal modal-selector hide fade', 'tabindex': '-1' }
  .modal-header
    .pull-right
      %a.btn.btn-mini{ 'data-dismiss': 'modal', 'href': '#' }
        %i.grcicon-x-grey
    %h2
      Map People to
      PCI Compliance Program
  .modal-filter
    .row-fluid
      .span3
        &nbsp;
      .span6
        .modal-search
          %a.btn.btn-mini.search-reset{ 'href': '#' }
            %i.grcicon-x-grey
          %input{ 'type': 'text', 'class': 'input-block-level', 'placeholder': 'Search people' }
      -#.span3.checkbox-filter
        %input{ 'type': 'checkbox', 'id': 'control-type-filter', 'class': 'control-type-filter inline pull-right', 'checked': 'checked' }
        %label{ 'class': 'inline pull-right', 'for': 'control-type-filter' }
          Controls for this program only:
      .span3
        .pull-right
          %a.btn.btn-add{ 'href': '#' }
            %i.grcicon-add
            Person
  .modal-content
    .row-fluid
      .span3
        .selector-info{ 'style': 'margin-right:-10%;' }
          .pull-right
            %a{ 'class': 'btn btn-mini', 'rel': 'tooltip', 'title': 'Edit' }
              %i.grcicon-edit
            %a{ 'class': 'btn btn-mini', 'rel': 'tooltip', 'title': 'Remove' }
              %i.grcicon-remove
          %p
            %img{ 'src': '/static/images/sample/profile100.jpg', 'alt': '' }
          %h4
            Ernest Mandel
            %br
            Program Manager
            %br
            %small
              Google, inc
            %small
            %br
              %a{ 'href': 'mailto:ernestmandel@gmail.com' }
                ernestmandel@gmail.com
      .span4
        .search-title
          .row-fluid
            .span6
              %h4
                Search Results (9)
            .span6
              .guide
                &nbsp;
        .selector-list
          %ul.new-tree
            %li.tree-item.business
              .item-main
                .simple-link
                  .row-fluid
                    .span11
                      .item-data
                        .tree-title-area
                          Alexander Mikkovski
                          %span.url-link alexmikkovski@google.com
                    .span1
                      %input{ 'type': 'checkbox', 'rel': 'tooltip', 'title': 'map' }
            %li.tree-item.business
              .item-main
                .simple-link
                  .row-fluid
                    .span11
                      .item-data
                        .tree-title-area
                          Douglas Hyde
                          %span.url-link douglashyde@google.com
                    .span1
                      %input{ 'type': 'checkbox', 'rel': 'tooltip', 'title': 'map' }
            %li.tree-item.business
              .item-main
                .simple-link
                  .row-fluid
                    .span11
                      .item-data
                        .tree-title-area
                          Gilbert Bourgeaud
                          %span.url-link gilbertbourgeaud@google.com
                    .span1
                      %input{ 'type': 'checkbox', 'rel': 'tooltip', 'title': 'map' }

      .span5{ 'style': 'margin-left:0; width:42.17094%' }
        .selector-info
          %h4
            %i.grcicon-user-black
            Related People (2)
          %ul.linked-people
            %li
              %a{ 'href': '#', 'class': 'jump-to-control' }
                %span
                  Lev Davidovich Bronstein
            %li
              %a{ 'href': '#', 'class': 'jump-to-control' }
                %span
                  Chris Hani
  .modal-footer
    .row-fluid
      .span6
        .deny-buttons
      .span6
        .confirm-buttons
          %a.btn.btn-primary.preventdoubleclick{ 'data-toggle': 'modal-submit', 'href': '#' }
            Save
