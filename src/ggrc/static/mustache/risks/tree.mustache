{{#list}}
<li class="risk" data-object-id="{{instance.id}}">
  {{#instance}}
  <div class="item-main" data-model="true" {{data 'model'}}>
    <div class="lastchild openclose"></div>
    <div class="item-title">
      <div class="row-fluid">
        <div class="span8">
          <div class="oneline expand-on-hover">
            <i class="grcicon-risk-color"></i>
            <span class="title">
              {{title}}
            </span>
            <span class="code">
              {{slug}}
            </span>
            <span class="description-inline">

              <i class="description-inline">
                {{{firstnonempty description_inline ''}}}
              </i>
            </span>
          </div>
          <div class="description">
            <div class="rtf">{{firstnonempty description '<i>No description</i>'}}</div>
          </div>
        </div>
        <div class="span1">
          <a class="view-more" href="javascript://">
            view
          </a>
        </div>

      </div>
      <div class="item-actions">
        {{#child_options}}
          {{#create_link}}
          <a class="btn btn-mini"
            href="javascript://"
            rel="tooltip"
            data-placement="left"
            data-toggle="modal-relationship-selector"
            data-modal-class="modal-wide"
            data-modal-reset="reset"
            data-original-title="Link {{model.title_plural.toLowerCase}} to this object"
            data-related-model="{{model.model_singular}}"
            data-related-title-singular="{{model.title_singular}}"
            data-related-title-plural="{{model.title_plural}}"
            data-related-side="{{related_side}}"
            data-related-table-plural="{{model.table_plural}}"
            data-related-model-singular="{{model.model_singular}}"
            data-relationship-type="{{find_params.relationship_type_id}}"
            data-tab-target="#related-objects-org_group_relies_upon_org_group">
            <i class="grcicon-link"></i>
          </a>
          {{/create_link}}
        {{/child_options}}
        {{^single_object}}
        <a class="btn btn-mini" data-placement="left" href="{{viewLink}}" rel="tooltip" title="Go to this object's page">
          <i class="grcicon-goto"></i>
        </a>
        {{/single_object}}
      </div>
    </div>
  </div>
  {{/instance}}
  <div class="item-content">
  </div>
</li>
{{/list}}
{{^list}}
  <div class="no-data">
  No risks are linked to this object
  </div>
{{/list}}