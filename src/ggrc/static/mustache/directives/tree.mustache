{{#list}}
  <li class="tree-item governance" data-object-id="{{instance.id}}" data-object-sub-type="{{instance.lowercase_kind}}" data-object-type="{{instance.constructor.shortName}}" data-object-meta-type="directive" {{data 'model'}}>

    {{#instance}}
      <a class="tree-link" href="javascript://">
        <div class="row-fluid">
          <div class="span10">
            <div class="item-data">
              <div class="tree-title-area">
                <i class="grcicon-{{constructor.table_singular}}-color"></i>
                {{title}}
              </div>
            </div>
          </div>
          <div class="span1">
            {{! Missing owner slot}}
            &nbsp;
          </div>
          <div class="span1">
            <div class="counter">
              <i class="grcicon-section-black"></i>
              {{sections.length}}
            </div>
          </div>
        </div>
      </a>
      <div class="tier-2-info">

        <div class="tier-2-info-content">
          <div class="row-fluid">
            <div class="span12">
              <div class="tree-description short">
                {{{firstnonempty description '<p><i>No description</i></p>'}}}
              </div>
              <a href="javascript://" class="show-long">
                more
              </a>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span8">
              <div class="tree-info">
                <strong>Owner:</strong>
                Manny Rangerburden
              </div>
            </div>
            <div class="span4">
              <!--
                <a href="#" class="info-action pull-right" rel="tooltip" title="Edit Contract" data-placement="left">
                  Edit
                  %i.grcicon-edit
                </a>
              -->
            </div>
          </div>
          <div class="row-fluid">
            <div class="span8">
              <div class="tree-info">
                <strong>URL:</strong>
                <a href="http://gdrive.googleplex.com/artpartycraft/42387994793827" target="_blank">
                  http://gdrive.googleplex.com/artpartycraft/42387994793827
                </a>
              </div>
            </div>
            <div class="span4">
              <a href="/directives/{{id}}" class="info-action pull-right" rel="tooltip" title="View {{constructor.table_singular}}" data-placement="left">
                View
                <i class="grcicon-goto"></i>
              </a>
            </div>
          </div>
        </div>
        
        {{#if draw_children}}
          {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
            <div class="inner-tree">
              <h6>Sections ({{sections.length}})</h6>
              {{#child_options}}
                <ul class="new-tree-inner" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")._data) }}></ul>
              {{/child_options}}
            </div>
          {{/if_null}}
        {{/if}}
        
      </div>
    {{/instance}}

  </li>
{{/list}}

{{! Add tree item - should be Contract OR Regulation OR Policy NOT Directive }}
<li class="tree-item-add">
  <a href="#">
    <div class="row-fluid">
      <div class="span12">
        + Directive
      </div>
    </div>
  </a>
</li>