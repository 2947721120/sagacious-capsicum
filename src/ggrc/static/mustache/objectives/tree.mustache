{{#list}}

  <li class="tree-item governance" data-object-id="{{instance.id}}" data-object-type="objective">
    <div class="item-main" {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span10">
            <div class="item-data">
              <div class="tree-title-area">
                {{instance.title}}
              </div>
            </div>
          </div>
          <div class="span1">
            {{^instance.owner}}
              <i class="grcicon-people-warning"></i>
            {{/instance.owner}}
          </div>
          <div class="span1">
            <div class="counter">

            </div>
          </div>
        </div>
      </a>
    </div>

    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        <div class="row-fluid">
          <div class="span12">
            <div class="tree-description short">
              {{^instance.description}}
                <p><i>No description</i></p>
              {{/instance.description}}
              {{{instance.description}}}
            </div>
            <a href="javascript://" class="show-long">more</a>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span8">
            <div class="tree-info">
              <strong>Owner:</strong>
              {{^instance.owner}}
                <span class="error">
                  Not Assigned
                </span>
              {{/instance.owner}}
              {{#if instance.owner}}
                {{instance.owner.name}}
              {{/if}}
            </div>
          </div>
          <div class="span4">
          </div>
        </div>
        <div class="row-fluid">
          <div class="span8">
            <div class="tree-info">
              <strong>URL:</strong>
              {{^if_null instance.url}}
                <a class="url" href="{{instance.url}}">
                  {{instance.url}}
                </a>
              {{/if_null}}
              {{#if_null instance.url}}
                <i>No URL</i>
              {{/if_null}}
            </div>
          </div>
          <a href="{{instance.viewLink}}" class="info-action pull-right" rel="tooltip" title="View Objective" data-placement="left">
            <i class="grcicon-goto"></i>
            View
          </a>
        </div>
      </div>
    </div>
  </li>
{{/list}}
<li class="tree-item tree-item-add">
  <div class="row-fluid">
    <div class="span12">
      <a href="javascript://">
        + Control Objective
      </a>
    </div>
  </div>
</li>