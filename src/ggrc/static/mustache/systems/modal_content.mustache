{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <i class="grcicon-help-black"></i>
      </label>
      <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{this.title}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <label>
        Description
        <i class="grcicon-help-black"></i>
      </label>
      <div class="wysiwyg-area">
        <textarea id="system_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description">{{{description}}}</textarea>
      </div>
    </div>
    <div class="span6">
      <label>
        Owner/Person of Contact
        <i class="grcicon-help-black"></i>
      </label>
      <input class="input-block-level" name="owner" placeholder="Enter Title" type="text" value="{{owner}}">
      <label>
        Direct URL
        <i class="grcicon-help-black"></i>
      </label>
      <input class="input-block-level" name="url" placeholder="http://www.domain.com/" type="text" value="{{url}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="#">
          <span class="out">
            <i class="grcicon-show"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Code, Network Zone, Reference URL, Notes
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span3">
        <label>
          Code
          <i class="grcicon-help-black"></i>
        </label>
        <input class="input-block-level" name="slug" placeholder="SYSTEM-XXX" type="text" value="{{slug}}">
      </div>
      <div class="span3">
        <label>
          Network Zone
          <i class="grcicon-help-black"></i>
        </label>
        <input class="input-block-level" name="network_zone.id" placeholder="Enter Network Zone" type="text" value="{{network_zone_id}}">
      </div>
      <div class="span6">
        <label>
          Reference URL
          <i class="grcicon-help-black"></i>
        </label>
        <input class="input-block-level" name="url" placeholder="http://www.domain.com/" type="text" value="{{url}}">
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <label>
          Notes
          <i class="grcicon-help-black"></i>
        </label>
        <div class="wysiwyg-area">
          <textarea id="system_notes" class="span12 double wysihtml5" name="notes" placeholder="Enter Notes">{{{notes}}}</textarea>
        </div>
      </div>
    </div>
    
  </div>
</form>
{{/instance}}
{{!/div}}
