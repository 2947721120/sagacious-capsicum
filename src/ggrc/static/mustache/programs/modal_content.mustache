{{!div class="modal-body"}}
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <i class="grcicon-help-black"></i>
      </label>
      <input class="input-block-level" placeholder="Enter Title" type="text">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <label>
        Description
        <i class="grcicon-help-black"></i>
      </label>
      <div class="wysiwyg-area">
        <textarea class="span12 double" placeholder="Enter Description"></textarea>
      </div>
    </div>
    <div class="span6">
      <label>
        Owner/Person of Contact
        <i class="grcicon-help-black"></i>
      </label>
      <input class="input-block-level" placeholder="Enter Title" type="text">
      <label>
        Direct URL
        <i class="grcicon-help-black"></i>
      </label>
      <input class="input-block-level" placeholder="http://www.domain.com/" type="text">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="#">
          <i class="grcicon-show"></i>
          Show Advanced
          <span class="hidden-fields">
            Code, Reference URL, Scope, Organization
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area">
    <div class="row-fluid">
      <div class="span6">
        <label>
          Code
          <i class="grcicon-help-black"></i>
        </label>
        <input class="input-block-level" placeholder="PROGRAM-XXX" type="text">
      </div>
      <div class="span6">
        <label>
          Reference URL
          <i class="grcicon-help-black"></i>
        </label>
        <input class="input-block-level" placeholder="http://www.domain.com/" type="text">
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <label>
          Organization
          <i class="grcicon-help-black"></i>
        </label>
        <input class="input-block-level" placeholder="Enter Organization" type="text">
      </div>
      <div class="span6">
        <label>
          Program Scope
          <i class="grcicon-help-black"></i>
        </label>
        <input class="input-block-level" placeholder="Enter Scope" type="text">
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="expand-link">
          <a class="show-hidden-fields hide-hidden-fields" href="#">
            <i class="grcicon-hide"></i>
            Hide Advanced

          </a>
        </div>
      </div>
    </div>
  </div>
{{!/div}}