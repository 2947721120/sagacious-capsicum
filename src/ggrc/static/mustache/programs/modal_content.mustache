{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  {{{ handle_context }}}
  <input type="hidden" name="kind" value="Directive" />
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Enter Title"></i>
      </label>
      {{^if_null '1'}}
      <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}">
      {{/if_null}}
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <label>
        Description
        <i class="grcicon-help-black" rel="tooltip" title="Enter Description"></i>
      </label>
      <div class="wysiwyg-area">
        <textarea id="program_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description">{{{description}}}</textarea>
      </div>
    </div>
    <div class="span6">
      <label>
        Owner/Person of Contact
        <i class="grcicon-help-black" rel="tooltip" title="Enter Owner/Person of Contact"></i>
      </label>
      <input class="input-block-level" name="owner" placeholder="Enter email address" type="text" value="{{owner}}">
      <label>
        Program URL
        <i class="grcicon-help-black" rel="tooltip" title="Enter URL"></i>
      </label>
      <input class="input-block-level" name="url" placeholder="http://www.domain.com/" type="text" value="{{url}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Code, Scope, Organization, Privacy
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span6">
        <label>
          Code
          <i class="grcicon-help-black" rel="tooltip" title="Enter Code"></i>
        </label>
        <input class="input-block-level" name="slug" placeholder="PROGRAM-XXX" type="text" value="{{slug}}">
      </div>
      <div class="span6">
        <label>
          Organization
          <i class="grcicon-help-black" rel="tooltip" title="Enter Organization"></i>
        </label>
        <input class="input-block-level" name="org_name" placeholder="Enter Organization" type="text" value="{{org_name}}">
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <label>
          Program Scope
          <i class="grcicon-help-black" rel="tooltip" title="Enter Program Scope"></i>
        </label>
        <input class="input-block-level" name="scope" placeholder="Enter Scope" type="text" value="{{scope}}">
      </div>
      {{#private_program modal_title}}{{/private_program}}
    </div>
  </div>
</form>
{{/instance}}
{{!/div}}
