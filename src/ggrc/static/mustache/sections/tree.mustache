{{#list}}
  <li class="sub-item governance" id="content_{{instance.slug}}" data-id="{{instance.id}}" data-object-id="{{instance.id}}" data-object-type="{{instance.constructor.shortName.toLowerCase}}" data-object-meta-type="section" data-model="true" {{data 'model'}}>
    {{#instance}}

      <a href="javascript://" class="tree-link">
        <div class="row-fluid">
          <div class="span10">
            <div class="item-data">
              <div class="tree-title-area">
                <i class="grcicon-section-color"></i>
                <span class="tree-code">{{slug}}</span>
                {{title}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{#pack list=controls na=na id=id}}
                <span class="controls-count controllist"  data-content="{{render '/static/mustache/controls/list_popover.mustache'}}" data-placement="left" data-popover-trigger="sticky-hover" href="javascript://">
                  {{{withattr 'data-original-title' "<div class='row-fluid'><div class='span12'><h3><a href='javascript://' data-id='{id}' class='btn btn-mini pull-right controllist' rel='tooltip' title='Map Controls to Section'><i class='grcicon-section-color'></i><i class='grcicon-reg-map'></i><i class='grcicon-control-color'></i></a><i class='grcicon-control-color'></i>Mapped Controls</h3></div></div>"}}}
                  <i class="grcicon-control-black"></i>
                  {{#with list}}
                    {{#if length}} 
                      <span>{{length}}</span>
                    {{else}}
                      <strong class="error">0</strong>
                    {{/if}}
                  {{/with}}
                </span>
              {{/pack}}
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{#pack list=objectives na=na id=id}}
                <span class="controls-count objectivelist"  data-content="{{render '/static/mustache/objectives/list_popover.mustache'}}" data-placement="left" data-popover-trigger="sticky-hover" href="javascript://">
                  {{{withattr 'data-original-title' "<div class='row-fluid'><div class='span12'><h3><a href='javascript://' data-id='{id}' class='btn btn-mini pull-right objectivelist' rel='tooltip' title='Map Objectives to Section'><i class='grcicon-section-color'></i><i class='grcicon-reg-map'></i><i class='grcicon-objective-color'></i></a><i class='grcicon-objective-color'></i>Mapped Objectives</h3></div></div>"}}}
                  <i class="grcicon-objective-black"></i>
                  {{#with list}}
                    {{#if length}} 
                      <span>{{length}}</span>
                    {{else}}
                      <strong class="error">0</strong>
                    {{/if}}
                  {{/with}}
                </span>
              {{/pack}}
            </div>
          </div>
        </div>
      </a>
      <div class="tier-2-info">
        <div class="tier-2-info-content">
          <div class="row-fluid">
            <div class="span12">
              <div class="tree-description short">
               {{^description}}
                  <p><i>No description</i></p>
                {{/description}}
                {{{description}}}
              </div>
              <a href="javascript://" class="show-long">more</a>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span8">
              <div class="tree-info">
                <strong>Owner:</strong>
                Manny Rangerburden
              </div>
            </div>
            <div class="span4">
              {{#edit_sections}}
                <a href="#" class="info-action pull-right" rel="tooltip" title="Edit Section" data-placement="left">
                  <i class="grcicon-edit"></i>
                  Edit
                </a>
              {{/edit_sections}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span8">
              <div class="tree-info">
                <a href="http://gdrive.googleplex.com/artpartycraft/42387994793827" target="blank">
                  http://gdrive.googleplex.com/artpartycraft/42387994793827
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
     
    {{/instance}}
    
    {{#if draw_children}}
      {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
        <div class="item-content" {{#start_expanded}}style="display: block;"{{/start_expanded}}>
          {{#child_options}}
            <ul class="tree-structure" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
          {{/child_options}}
        </div>
      {{/if_null}}
    {{/if}}
  </li>
{{/list}}

<li class="sub-item tree-item-add">
  <div class="row-fluid">
    <div class="span12">
      <a href="javascript://" class="section-add">
        + Section
      </a>
      <a href="javascript://" class="section-create">
        <i class="grcicon-add-black"></i>
        Create Section
      </a>
      &nbsp;
      &nbsp;
      <a href="javascript://" class="section-import">
        <i class="grcicon-imp-exp"></i>
        Import Sections
      </a>
    </div>
  </div>
</li>