{{#list}}
  <li class="tree-item control" data-object-id="{{instance.id}}" data-object-type="control" data-object-meta-type="control">
    {{#instance}}
      <div class="item-main" {{data 'model'}}>
        <div class="openclose">
          <a class="openclose-placeholder" href="javascript://"> </a>
          <div class="row-fluid">
            <div class="span10">
              <div class="item-data">
                <div class="tree-title-area">
                  {{^sections}}
                    <span class="not-mapped">
                      NOT MAPPED
                    </span>
                  {{/sections}}
                  {{#title}}
                    {{title}}
                  {{/title}}
                  {{^title}}
                    {{{firstnonempty description_inline ''}}}
                  {{/title}}
                </div>
              </div>
            </div>
            <div class="span1">
              <div class="counter">
                {{^owner}}
                  <i class="grcicon-people-warning"></i>
                {{/owner}}
              </div>
            </div>
            <div class="span1">
              <div class="counter">
                {{^mapped_section_ids}}
                  <i class="grcicon-section-danger"></i>
                {{/mapped_section_ids}}
                {{#if mapped_section_ids.length}}
                  <i class="grcicon-section-color"></i>
                {{/if}}
                {{mapped_section_ids.length}}
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="tier-2-info item-content">
      
        <div class="tier-2-info-content">
          <div class="row-fluid">
            <div class="span12">
              <div class="tree-description short">
                {{{firstnonempty description '<p><i>No description.</i></p>'}}}
              </div>
              {{{show_long}}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span8">
              <div class="tree-info">
                <strong>Owner:</strong>
                {{^owner}}
                  <span class="error">
                    Not Assigned
                  </span>
                {{/owner}}
                {{#if owner}}
                  {{owner.name}}
                {{/if}}
              </div>
            </div>
            <div class="span4">
            </div>
          </div>
          <div class="row-fluid">
            <div class="span8">
              <div class="tree-info">
                <strong>URL:</strong>
                {{^if_null url}}
                  <a class="url" href="{{url}}">
                    {{url}}
                  </a>
                {{/if_null}}
                {{#if_null url}}
                  <i>No URL</i>
                {{/if_null}}
              </div>
            </div>
            <div class="span4">
              <a href="/controls/{{id}}" class="info-action pull-right" rel="tooltip" title="View Control" data-placement="left">
                <i class="grcicon-goto"></i>
                View
              </a>
            </div>
          </div>
        </div>

      </div>
    {{/instance}}
  </li>
{{/list}}
<li class="tree-item tree-item-add">
  <div class="row-fluid">
    <div class="span12">
      <a href="javascript://">
        + Control
      </a>
    </div>
  </div>
</li>
