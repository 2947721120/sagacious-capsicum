  {{#instance}}
  <div class="selector-info" style="margin-left:-5%">
    <h4>
      <i class="grcicon-{{model.model_singular.toLowerCase}}-color"></i>
      {{title}}
    </h4>
    <p class="code compliance">{{slug}}</p>
    <div class="rtf">
      {{#if description}}
        {{{description}}}  
      {{else}}
        <p class="no-data" style="margin-top:100px">No Description</p>
      {{/if}}
    </div>
  </div>
  {{/instance}}
  {{#unless instance}}
  <div class="no-content">
    <h4>NO {{model.title_singular.toUpperCase}} IS SELECTED</h4>
    <p>Choose one of the {{model.title_plural.toLowerCase}} from the list.</p>
  </div>
  {{/unless}}
