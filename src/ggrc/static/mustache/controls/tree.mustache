{{#list}}
  <li class="tree-item governance" data-object-id="{{instance.id}}" data-object-type="control">
    {{#instance}}
    <div class="item-main" {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span10">
            <div class="item-data">
              <div class="tree-title-area">
                {{#title}}
                  {{title}}
                {{/title}}
                {{^title}}
                  {{{firstnonempty description_inline ''}}}
                {{/title}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{^owner}}
                <i class="grcicon-people-warning"></i>
              {{/owner}}
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              &nbsp;
            </div>
          </div>
        </div>
      </a>
    </div>
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        <div class="row-fluid">
          <div class="span12">
            <div class="tree-description short">
              {{{firstnonempty description '<p><i>No description.</i></p>'}}}
            </div>
            <a href="javascript://" class="show-long">more</a>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span8">
            <div class="tree-info">
              <strong>Owner:</strong>
              {{^owner}}
                <span class="error">
                  Not Assigned
                </span>
              {{/owner}}
              {{#if owner}}
                {{owner.name}}
              {{/if}}
            </div>
          </div>
          <div class="span4">
          </div>
        </div>
        <div class="row-fluid">
          <div class="span8">
            <div class="tree-info">
              <strong>URL:</strong>
              {{^if_null url}}
                <a class="url" href="{{url}}">
                  {{url}}
                </a>
              {{/if_null}}
              {{#if_null url}}
                <i>No URL</i>
              {{/if_null}}
            </div>
          </div>
          <div class="span4">
            <a href="/controls/{{id}}" class="info-action pull-right" rel="tooltip" title="View Control" data-placement="left">
              <i class="grcicon-goto"></i>
              View
            </a>
          </div>
        </div>
      </div>
    </div>
    {{/instance}}
  </li>
{{/list}}
<li class="tree-item tree-item-add">
  <div class="row-fluid">
    <div class="span12">

      <a href="javascript://" class="section-add">
        + Control
      </a>
      <a href="javascript://" class="section-create" data-toggle="modal-ajax-form" data-modal-reset="reset" data-dirty="#regulations, #combo" data-route="regulations" data-modal-class="modal-wide" data-object-singular="Section" data-object-plural="sections">
        <i class="grcicon-add-black"></i>
        Create Control
      </a>
      &nbsp;
      &nbsp;
      {{#if_match parent_instance.constructor.shortName '^(Directive|Regulation|Policy|Contract)$'}}
        <a href="/directives/{{parent_instance.id}}/import_controls" class="section-import">
          <i class="grcicon-imp-exp"></i>
          Import Controls
        </a>
        &nbsp;
        &nbsp;
        <a href="/directives/{{parent_instance.id}}/export_controls" class="section-import">
          <i class="grcicon-imp-exp"></i>
          Export Controls
        </a>
      {{/if_match}}
    </div>
  </div>
</li>
