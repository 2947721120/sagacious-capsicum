{{! dashboard object listing}}
<ul class="tree-structure new-tree">
{{#list}}
  <li class="tree-item {{object_type}}" data-model="true">
    <div class="item-main" {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span11">
            <div class="item-data">
              <div class="tree-title-area">
                {{title}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{^owner}}
                <i class="grcicon-people-warning"></i>
              {{/owner}}
            </div>
          </div>
        </div>
      </a>
    </div>
    
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">

        <div class="row-fluid">
          <div class="span6">
            <a href="{{viewLink}}" class="info-action">
              View {{object_type}}
              <i class="grcicon-goto"></i>
            </a>
          </div>
        </div>
        
        {{#description}}
        <div class="show-description">
          <div class="row-fluid">
            <div class="span12">
              <div class="tree-description short">
                {{{description}}}
              </div>
              <a href="javascript://" class="show-long">...more</a>
            </div>
          </div>
        </div>
        {{/description}}
        
        <div class="row-fluid">
          <div class="span6">
            <div class="tree-info">
              <strong>Owner:</strong>
              {{^owner}}
                <span class="error">
                  Not Assigned
                </span>
              {{/owner}}
              {{#if owner}}
                {{owner.name}}
              {{/if}}
            </div>
          </div>

          {{#url}}
          <div class="span6">
            <div class="tree-info">
              <strong>URL:</strong>
                <a class="url" href="{{url}}" target="_blank">
                  {{url}}
                </a>
            </div>
          </div>
          {{/url}}

        </div>
      </div>
    </div>
  </li>
{{/list}}

  {{#if_equals parent_instance.constructor.shortName "Program"}}
  <li class="tree-item tree-item-add">
    <div class="row-fluid">
      <div class="span12">
          <a
            href="javascript://"
            rel="tooltip"
            data-placement="left"
            data-toggle="modal-selector"
            data-modal-selector-options="program_controls"
            data-modal-class="modal-wide"
            data-original-title="map {{model.title_singular.toLowerCase}} to this object"
            data-join-object-id="{{parent_instance.id}}"
            data-join-object-type="{{parent_instance.constructor.shortName}}">
            + {{model.title_singular}}
          </a>
      </div>
    </div>
  </li>
  {{/if_equals}}
</ul>
