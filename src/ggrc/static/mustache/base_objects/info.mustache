<div class="info-block">
  <h3>{{title}}</h3>
  {{#if type}}
  <p>
    {{type.title}}
  </p>
  {{/if}}
  <div class="rtf-block">
    {{{firstnonempty description '<h4>No description</h4>'}}}
  </div>
  <p>
    <a href="{{url}}" class="inner-element" target="_blank">
      {{url}}
    </a>
  </p>
  <p>
    <small>Code: {{slug}} | Created: {{created_at}}</small>
  </p>
</div>