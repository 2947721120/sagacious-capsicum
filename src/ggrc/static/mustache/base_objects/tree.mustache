{{#list}}
<li class="tree-item {{model.model_singular.toLowerCase}}" data-object-id="{{instance.id}}" data-object-type="{{model.table_singular}}">
  <div class="item-main" data-model="true" {{data 'model'}}>
    
    <a href="javascript://" class="openclose">
      <div class="row-fluid">
        <div class="span10">
          <div class="item-data">
            <div class="tree-title-area">
              <i class="grcicon-{{model.model_singular.toLowerCase}}-color"></i>
              {{instance.title}}
            </div>
          </div>
        </div>
        <div class="span1">
          <div class="counter">
            {{^instance.owner}}
              <i class="grcicon-people-warning"></i>
            {{/instance.owner}}
          </div>
        </div>
        <div class="span1">
          <div class="counter">
            
          </div>
        </div>
      </div>
    </a>
  </div>

  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">
      <div class="row-fluid">
        <div class="span12">
          <div class="tree-description short">
            {{{firstnonempty instance.description '<p><i>No description</i></p>'}}}
          </div>
          <a href="javascript://" class="show-long">...more</a>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <div class="tree-info">
            <strong>Owner:</strong>
            {{^instance.owner}}
              <span class="error">
                Not Assigned
              </span>
            {{/instance.owner}}
            {{#if instance.owner}}
              {{instance.owner.name}}
            {{/if}}
          </div>
        </div>
        <div class="span6">
          <a  title="Edit this object">
          <a class="info-action pull-right" data-object-plural="{{model.table_plural}}" data-object-singular="{{model.model_singular}}" data-object-id="{{instance.id}}" data-form-target="refresh" data-modal-class="modal-wide" data-placement="left" data-toggle="modal-ajax-form" href="javascript://" rel="tooltip" title="Edit {{model.model_singular}}">
            <i class="grcicon-edit"></i>
            Edit
          </a>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span8">
          <div class="tree-info">
            <strong>URL:</strong>
            {{^if_null instance.url}}
              <a class="url" href="{{instance.url}}">
                {{instance.url}}
              </a>
            {{/if_null}}
            {{#if_null instance.url}}
              <i>No URL</i>
            {{/if_null}}
          </div>
        </div>
        <div class="span4">
          {{^single_object}}
            <a href="{{instance.viewLink}}" class="info-action pull-right" rel="tooltip" title="View {{model.model_singular}}" data-placement="left">
              <i class="grcicon-goto"></i>
              View
            </a>
          {{/single_object}}
        </div>
      </div>
    </div>


    
    {{#if draw_children}}
      {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
        <div class="inner-tree">
          {{#child_options}}
            <h6>{{model.title_plural}}</h6>
            <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
            <ul class="new-tree">
              <li class="tree-item tree-item-add">
                <a
                  href="javascript://"
                  rel="tooltip"
                  data-placement="left"
                  data-toggle="modal-relationship-selector"
                  data-modal-class="modal-wide"
                  data-modal-reset="reset"
                  data-original-title="Link {{model.title_singular.toLowerCase}} to this object"
                  data-related-model="{{model.model_singular}}"
                  data-related-title-singular="{{model.title_singular}}"
                  data-related-title-plural="{{model.title_plural}}"
                  data-related-side="{{related_side}}"
                  data-related-table-plural="{{model.table_plural}}"
                  data-related-model-singular="{{model.model_singular}}"
                  data-relationship-type="{{find_params.relationship_type_id}}"
                  data-join-object-id="{{instance.id}}"
                  data-join-object-type="{{instance.constructor.shortName}}"
                  data-tab-target="#related-objects-{{find_params.relationship_type_id}}">
                  + {{model.title_singular}}
                </a>
              </li>
            </ul>
          {{/child_options}}
        </div>
      {{/if_null}}
    {{/if}}

  </div>
</li>
{{/list}}
