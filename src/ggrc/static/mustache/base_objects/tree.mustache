{{#list}}
  <li class="tree-item governance" data-object-id="{{instance.id}}" data-object-type="{{instance.constructor.table_singular}}">
    {{#instance}}
    <div class="item-main" {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span11">
            <div class="item-data">
              <div class="tree-title-area">
                {{^model.root_object}}
                  {{!assume use of stub class or Cacheable here}}
                  <i class="grcicon-{{constructor.table_singular}}-color"></i>
                {{/model}}
                {{#title}}
                  {{title}}
                {{/title}}
                {{^title}}
                  {{{firstnonempty description_inline ''}}}
                {{/title}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{^owner}}
                <i class="grcicon-people-warning"></i>
              {{/owner}}
            </div>
          </div>
        </div>
      </a>
    </div>
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">

        <div class="row-fluid">
          <div class="span12">
            <a href="{{viewLink}}" class="info-action">
              View {{constructor.title_singular}}
              <i class="grcicon-goto"></i>
            </a>
          </div>
        </div>
        
        {{#description}}
        <div class="show-description">
          <div class="row-fluid">
            <div class="span12">
              <div class="tree-description short">
                {{{description}}}
              </div>
              <a href="javascript://" class="show-long">...more</a>
            </div>
          </div>
        </div>
        {{/description}}
        
        <div class="row-fluid">
          <div class="span6">
            <div class="tree-info">
              <strong>Owner:</strong>
              {{^owner}}
                <span class="error">
                  Not Assigned
                </span>
              {{/owner}}
              {{#if owner}}
                {{owner.name}}
              {{/if}}
            </div>
          </div>
          {{#url}}
          <div class="span6">
            <div class="tree-info">
              <strong>URL:</strong>
              <a class="url" href="{{url}}" target="_blank">
                {{url}}
              </a>
            </div>
          </div>
          {{/url}}
        </div>
      </div>
    </div>
    {{/instance}}
    {{#if draw_children}}
      {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
          {{#child_options}}
            <div class="inner-tree">
              <h6>{{firstnonempty title_plural model.title_plural}} ({{list.length}})</h6>
              <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
            </div>
          {{/child_options}}
      {{/if_null}}
    {{/if}}
  </li>
{{/list}}
<li class="tree-item tree-item-add">
  <div class="row-fluid">
    <div class="span12">

      {{#if model.root_object}}
      <a href="javascript://" rel="tooltip" data-placement="left" data-toggle="modal-selector" data-modal-selector-options="{{parent_instance.constructor.table_singular}}_{{firstnonempty table_plural model.table_plural 'objects'}}" data-modal-class="modal-wide" xdata-modal-reset="reset" data-original-title="Map {{firstnonempty title_singular model.title_singular 'object'}} to this {{firstnonempty parent_instance.contstructor.title_singular 'object'}}" xdata-join-object="lookup-tree" data-join-object-id="{{parent_instance.id}}" data-join-object-type="{{parent_instance.constructor.model_singular}}">
          + Object
      </a>
      <a href="javascript://" class="control-create" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="{{parent_instance.constructor.model_singular}}" data-object-plural="{{parent_instance.constructor.table_plural}}" >
        <i class="grcicon-add-black"></i>
        Create Object
      </a>
      {{else}}

      <a href="javascript://" rel="tooltip" data-placement="left" data-toggle="multitype-modal-selector" data-join-object-id="{{parent_instance.id}}" data-join-object-type="{{parent_instance.constructor.shortName}}" data-original-title="Map {{firstnonempty title_singular model.title_singular 'object'}} to this {{firstnonempty parent_instance.contstructor.title_singular 'object'}}">
        + Object
      </a>

      {{/if}}
      &nbsp;
      &nbsp;
      {{#if_match parent_instance.constructor.shortName '^(Directive|Regulation|Policy|Contract)$'}}
        <a href="{{parent_instance.viewLink}}/import_controls" class="{{parent_instance.constructor.table_singular}}-import">
          <i class="grcicon-imp-exp"></i>
          Import Objects
        </a>
        &nbsp;
        &nbsp;
        <a href="{{parent_instance.viewLink}}/export_controls" class="{{parent_instance.constructor.table_singular}}-import">
          <i class="grcicon-imp-exp"></i>
          Export Objects
        </a>
      {{/if_match}}
    </div>
  </div>
</li>
