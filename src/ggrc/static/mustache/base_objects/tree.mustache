{{#list}}
<li class="{{model.model_singular.toLowerCase}}" data-object-id="{{instance.id}}" data-object-type="{{model.table_singular}}">
  {{#instance}}
  <div class="item-main" data-model="true" {{data 'model'}}>
    {{#start_expanded}}
      {{#show_expander draw_children "!" children_drawn "||" draw_children child_options.0.list "||" draw_children child_options.1.list }}
        <div class="openclose active"></div>
      {{/show_expander}}
    {{/start_expanded}}
    {{^start_expanded}}
      {{#show_expander draw_children "!" children_drawn "||" draw_children child_options.0.list "||" draw_children child_options.1.list }}
        <div class="openclose"></div>
      {{/show_expander}}
    {{/start_expanded}}
    <div class="item-title">
      <div class="row-fluid">
        <div class="span8">
          <div class="oneline expand-on-hover">
            <i class="grcicon-{{model.model_singular.toLowerCase}}-color"></i>
            <span class="title">
              {{title}}AAA
            </span>
            <span class="code">
              {{slug}}
            </span>
            <span class="description-inline">

              <i class="description-inline">
                {{firstnonempty description_inline ''}}
              </i>
            </span>
          </div>
          <div class="description {{^description}}no-description{{/description}}">
            <div class="rtf">{{{firstnonempty description '<i>No description</i>'}}}</div>
          </div>
        </div>
        <div class="span1">
          <a class="view-more" href="javascript://">
            view
          </a>
        </div>

      </div>
      <div class="item-actions">
        <a class="btn btn-mini" data-object-plural="{{model.table_plural}}" data-object-singular="{{model.model_singular}}" data-object-id="{{id}}" data-form-target="refresh" data-modal-class="modal-wide" data-placement="left" data-toggle="modal-ajax-form" href="javascript://" rel="tooltip" title="Edit this object">
          <i class="grcicon-edit"></i>
        </a>
        {{#child_options}}
          {{#create_link}}
          <a class="btn btn-mini"
            href="javascript://"
            rel="tooltip"
            data-placement="left"
            data-toggle="modal-relationship-selector"
            data-modal-class="modal-wide"
            data-modal-reset="reset"
            data-original-title="Link {{model.title_singular.toLowerCase}} to this object"
            data-related-model="{{model.model_singular}}"
            data-related-title-singular="{{model.title_singular}}"
            data-related-title-plural="{{model.title_plural}}"
            data-related-side="{{related_side}}"
            data-related-table-plural="{{model.table_plural}}"
            data-related-model-singular="{{model.model_singular}}"
            data-relationship-type="{{find_params.relationship_type_id}}"
            data-tab-target="#related-objects-{{find_params.relationship_type_id}}">
            <i class="grcicon-link"></i>
          </a>
          {{/create_link}}
        {{/child_options}}
        {{^single_object}}
        <a class="btn btn-mini" data-placement="left" href="{{viewLink}}" rel="tooltip" title="Go to this object's page">
          <i class="grcicon-goto"></i>
        </a>
        {{/single_object}}
      </div>
    </div>
  </div>
  {{/instance}}
  {{#if draw_children}}
  {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
  <div class="item-content" {{#start_expanded}}style="display: block;"{{/start_expanded}}>
    {{#child_options}}
    <ul class="tree-structure" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
    {{/child_options}}
  </div>
  {{/if_null}}
  {{/if}}
</li>
{{/list}}