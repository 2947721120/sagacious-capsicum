{{!section class="widget... }}
  <header class="header">
    <div class="row-fluid">
      <div class="span8">
        <h2>
          <i class="grcicon-{{widget_icon}}-color"></i>
          {{widget_name}}
          <span class="object_count">
            
          </span>
        </h2>
      </div>
      <div class="span4">
        <div class="widget-action pull-right remove-widget" rel="tooltip" title="Remove">
          <a class="remove" href="javascript://">
            <i class="grcicon-x-grey"></i>
          </a>
        </div>
        <div class="widget-action pull-right widget-showhide" rel="tooltip" title="Expand / Collapse">
          <a class="active" href="javascript://"></a>
        </div>
        <div class="widget-action pull-right widget-action-help">
          <a data-placement="top" data-toggle="modal-ajax" href="/help/{{firstnonemtpty widget_id model.table_plural}}_widget" rel="tooltip" data-original-title="Help">
            <i class="grcicon-help-black"></i>
          </a>
        </div>
      </div>
    </div>
  </header>
  {{#if show_filter}}
  <div class="filter">
    <div class="row-fluid">
      <div class="span8">
        <input class="ui-corner-all widgetsearch clear-value" type="text" placeholder="Search" />
      </div>
      <div class="span4">
        <a class="btn btn-add pull-right" href="/{{object_route}}/new" data-toggle="modal-ajax-form" data-modal-reset="reset" data-form-target="refresh" data-modal-class="modal-wide">
          <i class="grcicon-add"></i>
          <span class="object-type">{{model.shortName}}</span>
        </a>
      </div>    
    </div>
  </div>
  {{/if}}
  <section class="content"></section>
              
{{!/section}}
