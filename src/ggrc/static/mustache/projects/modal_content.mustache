{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <i class="grcicon-help-black"></i>
      </label>
      <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{this.title}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <label>
        Description
        <i class="grcicon-help-black"></i>
      </label>
      <div class="wysiwyg-area">
        <textarea id="system_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description">{{{description}}}</textarea>
      </div>
    </div>
    <div class="span6">
      <label>
        Owner/Person of Contact
        <i class="grcicon-help-black"></i>
      </label>
      <input class="input-block-level" name="owner" placeholder="Enter email address" type="text" value="{{owner}}">
      <label>
        Direct URL
        <i class="grcicon-help-black"></i>
      </label>
      <input class="input-block-level" name="url" placeholder="http://www.domain.com/" type="text" value="{{url}}">
    </div>
  </div>
</form>
{{/instance}}
{{!/div}}
