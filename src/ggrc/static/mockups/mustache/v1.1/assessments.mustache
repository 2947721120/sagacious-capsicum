<assessments-app>
<li class="programs accordion-group">
<a class="programs" href="#">
  <i class="grcicon-workflow-color"></i>
  Workflows
  <small>(<span class="item-count">{{assessments.length}}</span>)</small>
</a>

<ul class="sub-level">
  {{#each assessments}}
  <li class="programs" data-model="true">
    <a href="/mockups/v1.0/assessment.html" class="show-extended" can-click="select">
      <div class="row-fluid">
        <div class="span8 lhs-main-title">
          <span class="lhs-item">
            {{title}}
          </span>
        </div>
        <div class="span1 lhs-private"></div>
        <div class="span1 lhs-people"></div>
      </div>
    </a>
  </li>
  {{/each assessments}}
</ul>
<ul class="sub-actions">
  <li class="add-new">
    <a data-modal-class="modal-wide" class="show-workflow-modal" id="newWorkflow" href="#editAssessmentStandAlone" data-new="true" data-toggle="modal">
      + Create New
    </a>
  </li>
</ul>
</li>
<li class="programs accordion-group">
  <a class="programs" href="#">
    <i class="grcicon-task-color"></i>
    Tasks
    <small>(<span class="item-count">{{tasks.length}}</span>)</small>
  </a>

  <div class="content">
    <ul class="sub-level" style="max-height:225px;">
      {{#each tasks}}
      <li class="programs" data-model="true">
        <a href="#" class="show-extended">
          <div class="row-fluid">
            <div class="span8 lhs-main-title">
              <span class="lhs-item">
              {{title}}
              </span>
            </div>
            <div class="span1 lhs-private"></div>
            <div class="span1 lhs-people"></div>
          </div>
        </a>
      </li>
      {{/each}}
    </ul>
    <ul class="sub-actions">
      <li class="add-new">
        <a data-modal-class="modal-wide" href="#newTask" data-toggle="modal">
          + Create New
        </a>
      </li>
    </ul>
  </div>
</li>
</ul>
</div>
</assessments-app>
