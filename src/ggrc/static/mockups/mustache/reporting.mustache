                        <div class="span1 date-range-text">
                          <div class="centered">to</div>
                        </div>
                        <div class="span5">
                          <input class="input-block-level date hasDatepicker" name="custom_report_end_date_2" data-toggle="datepicker" data-after="custom_report_start_date_2" placeholder="MM/DD/YYYY" type="text" value="" id="">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="save-template-wrap">
                  <div class="add-filter">
                    <a href="javascript://" id="addFilterRule">show more filters...</a>
                  </div>
                  <div class="save-template">
                    <label class="small {{^if pivot_selected}}disabled{{/if}}">
