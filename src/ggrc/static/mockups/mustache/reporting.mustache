<reporting>

  <div class="header-content">
    <div class="row-fluid">
      <div id="page-header" class="span12">
        <h1 class="dashboard-title">
          Custom reporting
        </h1>
      </div>
    </div>
  </div>

  <div class="top-inner-nav">
    <div class="object-nav">
      <ul class="nav internav  cms_controllers_inner_nav ui-sortable">
        {{#tabs}}
        <li>
          <a href="#system">
            <div class="oneline">
              {{^new_report}}<i class="grcicon-pie-chart-color"></i>{{/new_report}}
              <span class="{{#new_report}} red{{/new_report}}">{{title}}</span>
            </div>
          </a>
        </li>
        {{/tabs}}

        <li class="hidden-widgets-list">
          <a class="dropdown-toggle" id="newReportAdd" href="#">
            <div class="oneline">
              <i class="grcicon-show" rel="tooltip" data-placement="top" data-original-title="Add new report"></i>
            </div>
          </a>
        </li>
      </ul>
    </div>
  </div>

  <section class="content">
    <div class="clearfix">
      <div class="object-area wide">
        <div id="show_columns" class="column-set">
          <div id="middle_column" class="widget-area ui-sortable">

            <!-- Widget: New Report -->
            <section class="widget sticky_header widget-active" style="display: block;">
              <section class="content ggrc_controllers_list_view">
                <div class="choose-object-wrap parent">
                  <div class="row-fluid">
                    <div class="span2">
                      <h6>
                        Pivot Object type
                        <span class="required">*</span>
                      </h6>
                      <select class="input-block-level option-type-selector">
                        <optgroup label="Governance">
                          <option value="Program" selected="selected">Program</option>
                          <option value="Regulation">Regulation</option>
                          <option value="Standard">Standard</option>
                          <option value="Policy">Policy</option>
                          <option value="Contract">Contract</option>
                          <option value="Objective">Objective</option>
                          <option value="Control">Control</option>
                          <option value="Section">Section</option>
                          <option value="Clause">Clause</option>
                        </optgroup>
                        <optgroup label="People/Groups">
                          <option value="People">Person</option>
                          <option value="OrgGroup">Org Group</option>
                        </optgroup>
                        <optgroup label="Assets/Business">
                          <option value="System">System</option>
                          <option value="Process">Process</option>
                          <option value="DataAsset">Data Asset</option>
                          <option value="Facility">Facility</option>
                          <option value="Market">Market</option>
                          <option value="Product">Product</option>
                          <option value="Project">Project</option>
                        </optgroup>
                      </select>
                    </div>
                    <div class="span4">
                      <h6>
                        Find pivot object
                        <span class="required">*</span>
                      </h6>
                      <div class="modal-search objective-selector">
                        <input id="pivot_search" class="input-block-level" placeholder="Type to search for program..." type="text">
                      </div>
                    </div>
                    <div class="span3">
                      <h6>
                        Primary object set
                        <span class="required">*</span>
                      </h6>
                      <div class="single-line-filter">
                        <select class="input-xlarge relevant-set-choose">
                          <option value="Program">Programs</option>
                          <option value="Regulation">Regulations</option>
                          <option value="Policy">Policies</option>
                          <option value="Standard">Standards</option>
                          <option value="Contract">Contracts</option>
                          <option value="Clause">Clauses</option>
                          <option value="Section">Sections</option>
                          <option value="Objective">Objectives</option>
                          <option value="Control" selected="selected">Controls</option>
                          <option value="Person">Persons</option>
                          <option value="System">Systems</option>
                          <option value="Process">Processes</option>
                          <option value="DataAsset">Data Assets</option>
                          <option value="Product">Products</option>
                          <option value="Project">Projects</option>
                          <option value="Facility">Facilities</option>
                          <option value="Market">Markets</option>
                        </select>
                        <a href="#" class="attribute-trigger" data-attrwrap=".attr-wrap"><i class="grcicon-setup-color"></i></a>
                        <div class="attr-wrap">
                          <h3>Select control attributes to show in report</h3>
                          <ul class="attr-list">
                            <li>
                              <label>
