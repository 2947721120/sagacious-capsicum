                        </select>
                        <a href="#" class="attribute-trigger"><i class="grcicon-setup-color"></i></a>
                      </div>
                    </div>
                  </div>
                </div>

                <div id="newFilter" class="filter-wrap">
                  <div class="row-fluid">
                    <div class="span4">
                      <h6>
                        Keyword filter
                      </h6>
                      <input type="text" class="input-block-level" placeholder="Enter keywords" id="">
                    </div>
                    <div class="span2">
                      <h6>
                        Owner/Contact
                      </h6>
                      <input type="text" class="input-block-level" placeholder="Type to find person" id="">
                    </div>
                    <div class="span3">
                      <h6>
                        Modified date (From - To)
                      </h6>
                      <div class="row-fluid">
                        <div class="span5">
                          <input class="input-block-level date hasDatepicker" name="custom_report_start_date" data-toggle="datepicker" data-before="custom_report_end_date" placeholder="MM/DD/YYYY" type="text" value="" id="">
                        </div>
                        <div class="span1 date-range-text">
                          <div class="centered">to</div>
                        </div>
                        <div class="span5">
                          <input class="input-block-level date hasDatepicker" name="custom_report_end_date" data-toggle="datepicker" data-after="custom_report_start_date" placeholder="MM/DD/YYYY" type="text" value="" id="">
                        </div>
                      </div>
                    </div>
                    <div class="span3">
                      <h6>
                        Created date (From - To)
                      </h6>
                      <div class="row-fluid">
                        <div class="span5">
                          <input class="input-block-level date hasDatepicker" name="custom_report_start_date_2" data-toggle="datepicker" data-before="custom_report_end_date_2" placeholder="MM/DD/YYYY" type="text" value="" id="">
