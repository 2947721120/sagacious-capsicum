<workflow>
<div class="area program">
    <div class="header-content">
      <div class="row-fluid">
        <div id="page-header" class="span9">
          <h1 class="programs">
            <div class="grcobject programs" rel="tooltip" data-placement="bottom" title="Assessment">
              <i class="grcicon-assessment-white"></i>
            </div>
            {{assessment.title}}
            <span class="private"></span>
          </h1>
        </div>
      </div>
    </div>

    <section class="content">
      <div class="clearfix">

        <div class="inner-nav">
          <div class="object-nav">
            <ul class="nav internav program cms_controllers_inner_nav ui-sortable">
              <li class="active">
                <a href="#info_widget">
                  <div class="oneline">
                    <i class="grcicon-info"></i>
                    Assessment Info
                  </div>
                </a>
                <div class="drag"></div>
              </li>
              <li>
                <a href="#objects_widget" class="objects_widget">
                  <div class="oneline">
                    <i class="grcicon-object-color"></i>
                    Objects (<span id="objectsMainCounter">{{assessment.objects.length}}</span>)
                  </div>
                </a>
                <div class="drag"></div>
              </li>
            </ul>
          </div>
        </div>


        <div class="object-area" style="margin-left: 200px;">
          <div id="show_columns" class="column-set">
            <div id="middle_column" class="widget-area ui-sortable">

              <!-- Widget: Assessment Info -->
              <section class="widget programs widget-active" id="info_widget">
                <header class="header">
                  <div class="row-fluid">
                    <div class="span9">
                      <h2>
                        <i class="grcicon-info"></i>
                        Assessment Info
                        <span class="object_count">
                          </span>
                        <span class="explanation"></span>
                      </h2>
                    </div>
                    <div class="span3">
                      <div class="widget-action pull-right widget-action-help">
                        <a data-placement="top" data-toggle="modal-ajax-helpform" data-help-slug="info" href="javascript://" rel="tooltip" data-original-title="Help">
                          <i class="grcicon-help-black"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </header>
                <section class="content">
                  <section class="info">
                    <div class="row-fluid">
                      <div class="span6">
                        <h3>{{assessment.title}}</h3>
                      </div>
                      <div class="span6">&nbsp;</div>
                    </div>

                    <div class="row-fluid">
                      <div class="span6">
                        <div class="rtf-block">
                          <p>Initial control setup confirmation.</p>
                        </div>
                      </div>
                      <div class="span6">
                        <div class="row-fluid">
                          <div>
                            <p>
                              <strong>Status:</strong><br>
                              {{assessment.status}}
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="row-fluid">
                      <div class="span12">
                        <div class="rtf-block">
                          <strong>Related Program:</strong>
                          <i class="grcicon-program-color"></i> <strong>{{assessment.program_title}}</strong>
                        </div>
                      </div>
                    </div>

                    <div class="row-fluid">
                      <div class="span12">
                        <p>
                          <strong>Assessment Lead:</strong>
                          {{assessment.lead_email}}
                        </p>
                        <p>
                          <strong>Requested on:</strong>
                          {{#if assessment.start_date}}{{assessment.start_date}}{{else}}<em>not defined</em>{{/if}}
                        </p>
                        <p>
                          <strong>Due on:</strong>
                          {{#if assessment.end_date}}{{assessment.end_date}}{{else}}<em>not defined</em>{{/if}}

                        </p>
                        <p>
                          <strong>gGRC Folder:</strong>
                          <a href="javascript://">/{{assessment.program_title}}/{{assessment.title}}/</a>
                        </p>
                      </div>
                    </div>

                    <div class="row-fluid">
                      <div class="span12">
                        <div class="info-utility-link">
                          <a href="#editAssessmentStandAlone" class="info-edit" title="Edit"  data-toggle="modal">
                            <i class="grcicon-edit"></i>
                            Edit Assessment Info
                          </a>
                        </div>
                      </div>
                    </div>

                    <div class="row-fluid">
                      <div class="span12">
                        <div class="workflow-wrap">
                          <h3>
                            Assessment Workflow <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
                            {{^workflow}}<span id="workflowNotSet"><em>Not yet selected</em></span>{{/workflow}}
                          </h3>
                          {{#workflow}}
                          <p class="workflow-subtitle">{{workflow.title}}</p>
                          <ul class="workflow-list">
                            <li>
                              <strong>* Tasks</strong> (<span class="count">{{workflow.tasks.length}}</span>)
                              <ul>
                                {{#each workflow.tasks}}
                                <li>{{.}}</li>
                                {{/each}}
                              </ul>
                            </li>
                            <li>
                              <strong>* Reviews</strong> (<span class="count">{{workflow.reviews.length}}</span>)
                              <ul>
                                {{#each workflow.reviews}}
                                <li>{{title}} (<a href="javascript://">{{reviewer}}</a>)</li>
                                {{/each}}
                             </ul>
                            </li>
                            <li>
                              <strong>* Reassessment frequency</strong>
                              <ul>
                                <li>Annually, every April 25th</li>
                              </ul>
                            </li>
                          </ul>
                          {{/workflow}}
                          <div class="info-utility-link">
                            {{^workflow}}
                            <a href="#setupWorkflow" class="setup-link" id="workflowSetup" data-toggle="modal">
                              <i class="grcicon-setup"></i>
                              Setup Assessment Workflow
                            </a>
                            {{/workflow}}
                            {{#workflow}}
                            <a href="#setupWorkflow" class="info-edit" id="workflowSetup" data-toggle="modal">
                              <i class="grcicon-edit"></i>
                              Edit Assessment Workflow
                            </a>
                            {{/workflow}}
                          </div>

                        </div>

                      </div>
                    </div>
                    {{^if assessment.started}}
                    <div class="info-widget-footer">
                      <div class="right-button">
                        <span class="gray small">
                          <em>
                          {{^if assessment.workflow}}
                          <span>No selected workflow</span>{{^if assessment.objects.length}}, {{/if}}
                          {{/if}}
                          {{^if assessment.objects.length}}
                          <span>No selected objects</span>
                          {{/if}}
                          </em>
                        </span>
                        <a href="#assessmentStart" class="btn btn-small btn-primary {{^if can_start}}disabled{{/if}}" data-toggle="modal">Start Assessment</a>
                      </div>
                    </div>
                    {{/if}}
                  </section>
                </section>
              </section>

              <!-- Widget: Objects -->
              <section class="widget objectives" id="objects_widget" style="display:none;">
                <header class="header">
                  <div class="row-fluid">
                    <div class="span9">
                      <h2>
                        <i class="grcicon-object-color"></i>
                        Objects under Assessment
                        <span class="object_count" id="objectsCounter">({{assessment.objects.length}})</span>
                        <span class="explanation"></span>
                      </h2>
                    </div>
                    <div class="span3">
                      <div class="widget-action pull-right widget-action-help">
                        <a data-placement="top" data-toggle="modal-ajax-helpform" data-help-slug="info" href="javascript://" rel="tooltip" data-original-title="Help">
                          <i class="grcicon-help-black"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </header>
                <section class="content">
                  <div class="object-step" id="filters">
                    {{#if filter}}
                    <div class="choose-object-wrap">
                      <div class="choose-object-content">
                        <div class="row-fluid">
                          <div class="span12">
                            <div class="first-row">
                              <label>
                                <strong>Add all</strong>
                              </label>
                              <select class="input-medium">
                                <option>Regulations</option>
                                <option>Contracts</option>
                                <option>Policies</option>
                                <option>Standards</option>
                                <option>Objectives</option>
                                <option selected="selected">Controls</option>
                              </select>
                            </div>
                          </div>
                        </div>
                        <div class="row-fluid">
                          <div class="span12">
                            {{#each filter_list}}
                            <div class="indent-row">
                              <label>
                                <strong>{{#if @index}}AND&nbsp;{{/if}}Relevant to:</strong>
                              </label>
                              <select class="input-small">
                                <option selected="selected">Program</option>
                                <option>Process</option>
                                <option>System</option>
                                <option>Market</option>
                              </select>
                              <div class="objective-selector">
                                <input type="text" name="program.title" class="input-large search-icon" value="{{value}}" placeholder="Enter text to search for Object">
                              </div>
                              <button type="submit" data-index="{{@index}}" class="remove_filter"><i class="grcicon-deleted"></i></button>
                            </div>
                            {{/each}}
                            <div class="add-rule indent-row">
                              <a href="javascript://" id="addFilterRule">+ Add Rule</a>
                            </div>
                          </div>
                        </div>
                      <div class="choose-object-footer">
                        <div class="row-fluid">
                          <div class="span3">
                            <div class="deny-buttons">
                              <a class="btn reset_filter" href="javascript://">Reset</a>
                            </div>
                          </div>
                          <div class="span3">
                            &nbsp;
                          </div>
                          <div class="span6">
                            <div class="confirm-buttons">
                              <span><strong>{{Objects.length}} controls found</strong></span>
                              <a class="btn btn-primary" href="javascript://" id="objectReview">Review</a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  {{/if}}
                    <ul class="tree-structure new-tree mockup-tree">
                      {{#if objects.length}}
                      <li class="tree-item governance object-filter">
                        <div class="item-main">
                          <div class="row-fluid">
                            <div class="span9">
                              <div class="item-data">
                                <div class="tree-title-area">
                                  <span><strong>{{objects.length}} controls found</strong></span> &nbsp; <a href="javascript://" id="filterTrigger"><strong>Show Filter</strong></a>
                                </div>
                              </div>
                            </div>
                            <div class="span3">
                              <div class="object-check all-check">
                                <label>
                                  select all
                                  <input type="checkbox" checked="checked" id="objectAll">
                                </label>
                              </div>
                            </div>
                          </div>
                        </div>
                      </li>
                      {{/if}}
                      {{#each objects}}
                      <li class="tree-item governance selected">
                        <div class="item-main">
                          <div class="row-fluid">
                            <div class="span11">
                              <div class="item-data">
                                <div class="tree-title-area">
                                  <i class="grcicon-control-color"></i>
                                  {{name}}
                                </div>
                              </div>
                            </div>
                            <div class="span1">
                              <div class="object-check">
                                <input type="checkbox" value="{{@index}}" checked="checked" class="object-check-single">
                              </div>
                            </div>
                          </div>
                        </div>
                      </li>
                      {{/each}}
                    </ul>
                     {{#if assessment.started}}
                     <ul class="tree-structure new-tree mockup-tree colored-list">
                     {{#each assessment.objects}}
	                    <li class="tree-item {{status}} object-top" data-index="{{@index}}">
	                      <div class="item-main">
	                        <a href="javascript://" class="openclose">
	                          <div class="row-fluid">
	                            <div class="span4">
	                              <div class="item-data">
	                                <div class="tree-title-area">
	                                  <i class="grcicon-control-color"></i>
	                                  Assessment of {{name}}
	                                </div>
	                              </div>
	                            </div>
	                            <div class="span2">
	                              {{#if assessment.end_date}}
	                              <span class="gray"><em>Due on {{assessment.end_date}}</em></span>
	                              {{/if}}
	                            </div>
	                            <div class="span3">
	                              <i class="grcicon-person-green pull-left icon-field"></i>
	                              <div class="objective-selector">
	                                <input type="text" name="assessment_lead.email" class="span10 short-field search-icon" value="Cassius Clay" placeholder="Enter text to search for Assessment Lead">
	                              </div>
	                            </div>
	                            <div class="span1">
	                              <div class="counter">
	                                <i class="grcicon-object-black" rel="tooltip" data-placement="top" data-original-title="Mapped Objects"></i>
	                                {{tasks.length}}
	                              </div>
	                            </div>
	                            <div class="span2">
	                              <div class="control-wrap">
	                                <div class="request-control">
	                                  {{#if_equals status 'rq-amended-request'}}
	                                  <button class="startObjectNow btn btn-primary" data-status="rq-responded" data-type="object">Start</button>
	                                  {{/if_equals}}
	                                  {{#if_equals status 'rq-responded'}}
	                                  <button class="startObjectNow btn {{^if can_finish}}disabled{{/if}}" data-status="rq-accepted" data-type="object">Finish</button>
	                                  {{/if_equals}}
	                                  {{#if_equals status 'rq-accepted'}}
	                                  <span class="objectMessageNow task-done" data-type="object"><em>Completed</em></span>
	                                  {{/if_equals}}
	                                </div>
	                              </div>
	                            </div>
	                          </div>
	                        </a>
	                      </div>
	                      <div class="tier-2-info item-content">
	                        <div class="tier-2-info-content">
	                          <a href="/mockups/v1.0/object.html" class="info-action">
	                            View Object
	                            <i class="grcicon-goto"></i>
	                          </a>
	                        </div>
	                        <div class="inner-tree">
	                          <h6>
	                            Tasks ({{tasks.length}})
	                          </h6>
	                          <ul class="tree-structure new-tree mockup-tree colored-list">
	                            {{#each tasks}}
	                            <li class="tree-item {{task_state}}">
	                              <div class="item-main">
	                                <a href="javascript://" class="openclose">
	                                  <div class="row-fluid">
	                                    <div class="span7">
	                                      <div class="item-data">
	                                        <div class="tree-title-area">
	                                          {{task_title}}
	                                        </div>
	                                      </div>
	                                    </div>
	                                    <div class="span3">
	                                      <i class="grcicon-person-green pull-left"></i>
	                                      <div class="objective-selector">
	                                        <input type="text" class="span10 short-field search-icon" placeholder="Enter text to search for Assessment Lead" value="{{task_lead}}">
	                                      </div>
	                                    </div>
	                                    <div class="span2">
	                                      <div class="control-wrap">
	                                        <div class="request-control">
	                                        {{#if_equals task_state 'rq-amended-request'}}
			                                    <button class="startObjectNow btn btn-primary" data-status="rq-responded" data-type="tasks" data-id="{{@index}}">Start</button>
			                                    {{/if_equals}}
			                                    {{#if_equals task_state 'rq-responded'}}
			                                    <button class="startObjectNow btn" data-status="rq-accepted" data-type="tasks"  data-id="{{@index}}">Finish</button>
			                                    {{/if_equals}}
			                                    {{#if_equals task_state 'rq-accepted'}}
			                                    <span class="objectMessageNow task-done" data-type="tasks"><em>Completed</em></span>
			                                    {{/if_equals}}
	                                        </div>
	                                      </div>
	                                    </div>
	                                  </div>
	                                </a>
	                              </div>

	                              <div class="tier-2-info item-content">
	                                <div class="tier-2-info-content">
	                                  <div class="show-description">
	                                    <div class="row-fluid">
	                                      <div class="span10">
	                                        <div class="tree-description">
	                                          <strong>Task Details</strong><br>
	                                          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras vel rutrum tortor. Etiam lobortis volutpat tristique. Donec eget odio eu.
	                                        </div>
	                                      </div>
	                                    </div>
	                                  </div>
	                                  <div class="row-fluid">
	                                    <div class="span11">
	                                      <div class="inner-row">

	                                        <strong>Comments (<span id="entriesCount">{{entries.length}}</span>)</strong>
	                                        <ul class="entry-list">
	                                          {{#each entries}}
	                                          <li>
	                                            {{content}}
	                                            <ul class="attachment-list">
	                                              <li>
	                                                <a href="javascript://">
	                                                  <i class="grcicon-attach"></i>
	                                                  <span>supportingwalkthroughevidence.pdf</span>
	                                                </a>
	                                              </li>
	                                              <li>
	                                                <a href="javascript://">
	                                                  <i class="grcicon-attach"></i>
	                                                  <span>screenshot.pdf</span>
	                                                </a>
	                                              </li>
	                                            </ul>
	                                            <span class="entry-author">By <a href="javascript://">Cassius Clay</a> on 2014-01-27 7:45am UTC</span>
	                                          </li>
	                                          {{/each}}
	                                        </ul>
	                                        {{^if_equals task_state 'rq-accepted'}}
	                                        <div class="add-entry" style="display:none;">
                                              <textarea class="span10" placeholder="Entry"></textarea>
                                              <a href="javascript://" class="entry-attachment">
                                                <i class="grcicon-attach-color"></i> Attach supporting file
                                              </a>
                                              <br>
                                              <a href="javascript://" class="btn btn-small btn-primary addEntry" data-objects='tasks' data-index="{{@index}}">
                                                <strong>Add comment</strong>
                                              </a>
                                          </div>
	                                        <a href="javascript://" class="add-entry-btn"><strong class="show_review">Add Entry</strong></a>
	                                        {{/if}}
	                                      </div>
	                                    </div>
	                                  </div>
	                                </div>
	                              </div>
	                            </li>
	                            {{/each}}
	                            {{^if_equals status 'rq-accepted'}}
	                            <li class="tree-item tree-item-add tree-footer">
	                              <div class="row-fluid">
	                                <div class="span12">
	                                  <a href="javascript://" class="section-create">
	                                    Create Task
	                                  </a>
	                                </div>
	                              </div>
	                            </li>
	                            {{/if}}
	                          </ul>
	                        </div>

	                        <div class="assessment-review">
	                          <p>
	                            <strong>Reviews</strong>
	                            <i class="grcicon-attribute-color review-icon"></i>
	                          </p>
	                          {{#each reviews}}
	                          <div class="review-wrap" style="display:none;">
	                            <div class="inner-tree">
	                              <h6>
	                                {{review_title}} Notes ({{notes.length}})
	                                <div class="pull-right review-note-action">
	                                  {{#if_equals 'rq-amended-request' review_state}}
	                                  <a href="javascript://" class="startObjectNow btn" data-status="rq-responded" data-type="reviews" data-id="{{@index}}">Complete {{review_title}}</a>
	                                  {{else}}
	                                  <span class="task-done"><em>{{review_title}} Completed</em></span>
	                                  {{/if_equals}}
	                                </div>
	                              </h6>
	                              <ul class="tree-structure new-tree mockup-tree">
	                                {{#each notes}}
	                                <li class="tree-item">
	                                  <div class="row-fluid">
	                                    <div class="span12">
	                                      <div class="item-data">
	                                        <div class="show-description">
	                                          <div class="tree-description">
	                                            {{content}}
	                                            <ul class="attachment-list">
	                                              <li>
	                                                <a href="javascript://">
	                                                  <i class="grcicon-attach"></i>
	                                                  <span>screenshot.pdf</span>
	                                                </a>
	                                              </li>
	                                            </ul>
	                                            <span class="entry-author">By <a href="javascript://">Ronnie Cederman</a> on 2014-01-27 7:45am UTC</span>
	                                          </div>
	                                        </div>
	                                      </div>
	                                    </div>
	                                  </div>
	                                </li>
	                                {{/each}}
	                                {{#if_equals 'rq-amended-request' review_state}}
	                                <li class="tree-item tree-item-add tree-footer">
	                                  <div class="row-fluid">
	                                    <div class="span12">
	                                      <div class="add-entry" style="display:none;">
			                                      <textarea class="span10" placeholder="Note"></textarea>
			                                      <a href="javascript://" class="entry-attachment">
			                                        <i class="grcicon-attach-color"></i> Attach supporting file
			                                      </a>
			                                      <br>
			                                      <a href="javascript://" class="btn btn-small btn-primary addEntry" data-objects='reviews' data-index="{{@index}}">
			                                        <strong>Add Note</strong>
			                                      </a>
			                                  </div>
	                                      <a href="javascript://" class="add-entry-btn"><strong class="show_review">Add Note</strong></a>
	                                    </div>
	                                  </div>
	                                </li>
	                                {{/if}}
	                              </ul>
	                            </div>
	                          </div>
	                          <label class="main-label">
	                            <input type="checkbox" class="show_review">
	                            Ready for {{review_title}}
	                          </label>
	                          {{/each}}
	                        </div>

	                      </div>
	                    </li>
	                    {{/each}}
	                    {{else}}
	                    <ul class="tree-structure new-tree mockup-tree">
	                    {{#each assessment.objects}}
                      <li class="tree-item governance">
                        <div class="item-main">
                          <div class="row-fluid">
                            <div class="span10">
                              <div class="item-data">
                                <div class="tree-title-area">
                                  <i class="grcicon-control-color"></i>
                                  {{name}}
                                </div>
                              </div>
                            </div>
                            <div class="span1">
                              <div class="counter">
                              </div>
                            </div>
                            <div class="span1">
                              <div class="counter">
                              </div>
                            </div>
                          </div>
                        </div>
                      </li>
                      {{/each}}
                      {{/if}}
                    </ul>
                  <ul class="tree-structure new-tree mockup-tree">
                    <li class="tree-footer tree-item tree-item-add">
                      <div class="row-fluid">
                        <div class="span10 section-expandable">
                          <div id="objectFooterUtility">
                            <a href="javascript://" class="section-add">
                              Add object under assessment
                            </a>
                            <span class="section-expander">
                              <a href="javascript://" id="addSingleObjectTrigger">
                                Add single object
                              </a>
                              &nbsp;
                              &nbsp;
                              <a href="javascript://" class="section-import" id="filterTriggerFooter">
                                Add multiple objects by filtering
                              </a>
                            </span>
                          </div>
                          <div class="add-single-object" id="addSingleObject">
                            <div class="row-fluid">
                              <div class="span2">
                                <select class="input-block-level" id="new_object_type">
                                  <option>Regulation</option>
                                  <option>Contract</option>
                                  <option>Policy</option>
                                  <option>Standard</option>
                                  <option>Objective</option>
                                  <option selected="selected">Control</option>
                                </select>
                              </div>
                              <div class="span4">
                                <div class="objective-selector">
                                  <input type="text" id="new_object_name" name="object.title" class="input-block-level search-icon" value="Stability and Perpetuability" placeholder="Enter text to search for Object">
                                </div>
                              </div>
                              <div class="span2">
                                <a href="javascript://" class="btn btn-primary btn-footer" id="addSingleControlNow">Add</a>
                                <a href="javascript://" id="cancelSingleControl"><i class="grcicon-x-grey"></i></a>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="span2">
                          {{#if objects.length}}
                          <div class="object-add">
                            <a href="javascript://" class="btn btn-primary btn-small" id="addSelected">Add selected</a>
                          </div>
                          {{/if}}
                        </div>
                      </div>
                    </li>
                  </ul>
                </section>
              </section>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <div id="editAssessmentStandAlone" class="modal hide fade modal-wide ui-draggable" tabindex="-1" role="dialog" aria-labelledby="newAssessmentStandAloneLabel" aria-hidden="true">
    <div class="modal-header">
      <a class="btn btn-mini btn-danger pull-right" href="javascript://" data-dismiss="modal">
        <i class="grcicon-x-white"></i>
      </a>
      <h2>
        <span>Edit Assessment</span>
      </h2>
    </div>
    <div class="modal-body">
      <form action="#">
        <div class="row-fluid">
          <div class="span8">
            <label>
              Assessment Title
              <span class="required">*</span>
              <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
            </label>
            <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{assessment.title}}" tabindex="1">
          </div>
          <div class="span4">
            <label>
              Program
              <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
            </label>
            <i class="grcicon-program-color pull-left icon-field"></i>
            <div class="objective-selector">
              <input tabindex="2" type="text" name="program_title" class="span11 search-icon" value="{{assessment.program_title}}" placeholder="Enter text to search for Program">
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6">
            <label>
              Assessment Lead
              <span class="required">*</span>
              <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
            </label>
            <i class="grcicon-person-green pull-left icon-field"></i>
            <div class="objective-selector">
              <input tabindex="3" type="text" name="lead_email" class="span11 search-icon" value="{{assessment.lead_email}}" placeholder="Enter text to search for Assessment Lead" value="Cassius Clay">
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span3">
            <label>
              Requested on
              <span class="required">*</span>
              <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
            </label>
            <input tabindex="4" class="input-block-level date" name="start_date" data-toggle="datepicker" data-before="start_date" placeholder="MM/DD/YYYY" type="text" value="{{assessment.start_date}}">
          </div>
          <div class="span3">
            <label>
              Due on
              <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
            </label>
            <input tabindex="5" class="input-block-level date" name="end_date" data-toggle="datepicker" data-after="end_date" placeholder="MM/DD/YYYY" type="text" value="{{assessment.end_date}}">
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="expand-link">
              <a class="show-hidden-fields" href="javascript://">
                <span class="out">
                  <i class="grcicon-show"></i>
                  Show
                </span>
                <span class="in">
                  <i class="grcicon-hide"></i>
                  Hide
                </span>
                Advanced
                <span class="hidden-fields out">
                  Description, gDrive Folder
                </span>
              </a>
            </div>
          </div>
        </div>

        <div class="hidden-fields-area" style="display:none">
          <div class="row-fluid">
            <div class="span6">
              <label>
                Description
                <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
              </label>
              <div class="wysiwyg-area">
                <textarea id="program_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description" tabindex="6"></textarea>
              </div>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12">
              <label>
                gGRC Folder
                <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
              </label>
              <span class="gray"><em>Not yet defined</em></span>
            </div>
          </div>
        </div>

      </form>
    </div>
    <div class="modal-footer">
      <div class="row-fluid">
        <div class="span3">
          <div class="deny-buttons">
            <a tabindex="22" class="btn" data-dismiss="modal" href="javascript://">Cancel</a>
          </div>
        </div>
        <div class="span6">
          &nbsp;
        </div>
        <div class="span3">
          <div class="confirm-buttons">
            <a id="saveAssessment" tabindex="24" class="btn btn-primary" href="javascript://">Save</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="assessmentStart" class="modal hide fade ui-draggable" tabindex="-1" role="dialog" aria-labelledby="assessmentStartLabel" aria-hidden="true">
    <div class="modal-header">
      <a class="btn btn-mini btn-danger pull-right" href="javascript://" data-dismiss="modal">
        <i class="grcicon-x-white"></i>
      </a>
      <h2>
        <span>Start Assessment</span>
      </h2>
    </div>
    <div class="modal-body">
      <p>
        Assessment tasks and review will be applied to <strong>{{assessment.objects.length}} selected objects</strong>, each of them will have {{assessment.workflow.tasks.length}} tasks
        and {{assessment.workflow.reviews.length}} review cycles attached.
      </p>
      <p>
        All objects and their tasks will be assigned to <a href="javascript://">{{assessment.lead_email}}</a> as Assessment Lead.
      </p>
      <a id="startAssessment" class="btn btn-primary btn-large" href="javascript://">Proceed</a>
      <a class="btn btn-large" data-dismiss="modal" href="javascript://">Cancel</a>
    </div>
  </div>



</workflow>
