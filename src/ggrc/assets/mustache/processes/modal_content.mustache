{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  {{{ handle_context }}}
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Enter Title"></i>
      </label>
      <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <label>
        Description
        <i class="grcicon-help-black" rel="tooltip" title="Enter Description"></i>
      </label>
      <div class="wysiwyg-area">
        <textarea id="system_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description">{{{description}}}</textarea>
      </div>
    </div>
    <div class="span6">
      <label>
        Owner/Person of Contact
        <i class="grcicon-help-black" rel="tooltip" title="Enter Owner/Person of Contact"></i>
      </label>
      {{! FIXME: Add 'owner' when the model reflects it }}
      <input class="input-block-level" {{!name="owner.email"}} placeholder="Enter email address" type="text" value="{{firstexist owner.email ''}}">
      <label>
        Process URL
        <i class="grcicon-help-black" rel="tooltip" title="Enter URL"></i>
      </label>
      <input class="input-block-level" name="url" placeholder="http://www.domain.com/" type="text" value="{{url}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Code, Network Zone, Notes
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span6">
        <label>
          Code
          <i class="grcicon-help-black" rel="tooltip" title="Enter Code"></i>
        </label>
        <input class="input-block-level" name="slug" placeholder="PROCESS-XXX" type="text" value="{{slug}}">
      </div>
      <div class="span6">
        <label>
          Network Zone
          <i class="grcicon-help-black" rel="tooltip" title="Enter Network Zone"></i>
        </label>
        {{{option_select this "network_zone" "network_zone"}}}
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <label>
          Notes
          <i class="grcicon-help-black" rel="tooltip" title="Enter Additional Notes"></i>
        </label>
        <div class="wysiwyg-area">
          <textarea id="system_notes" class="span12 double wysihtml5" name="notes" placeholder="Enter Notes">{{{notes}}}</textarea>
        </div>
      </div>
    </div>
  </div>
</form>
{{/instance}}
{{!/div}}
