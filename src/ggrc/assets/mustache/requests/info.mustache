{{#instance}}
<section class="info">
  {{#is_info_pin}}
    <div class="clearfix">
      {{> /static/mustache/base_objects/info-pin.mustache}}
    <div class="tier-content pin">
  {{/is_info_pin}}

  {{> /static/mustache/base_templates/header.mustache}}
  <div class="row-fluid">
    <div class="span8">
      {{> /static/mustache/base_objects/description.mustache}}

      <div class="row-fluid wrap-row">
        <div class="span6">
          <div class="left-spacing">
            <attachment-list title="Evidence" data="comments" types="!url"></attachment-list>
          </div>
        </div>
        <div class="span6">
          <attachment-list title="URL" data="comments" types="url"></attachment-list>
        </div>
      </div>

      {{#if test}}
      <div class="row-fluid wrap-row">
        <div class="span12">
          <h6>Test</h6>
          <div class="rtf-block">
            {{test}}
          </div>

        </div>
      </div>
      {{/if}}
      {{#if notes}}
      <div class="row-fluid wrap-row">
        <div class="span12">
          <h6>Notes</h6>
          <div class="rtf-block">
            {{notes}}
          </div>
        </div>
      </div>
      {{/if}}

      <div class="row-fluid wrap-row">
        <div class="span12">
          {{> /static/mustache/base_templates/mapped_objects.mustache}}
        </div>
      </div>

    </div>
    <div class="span4">

      <div class="row-fluid wrap-row">
        <div class="span12">
          {{> /static/mustache/base_templates/people_list.mustache}}
        </div>
      </div>

      <div class="row-fluid wrap-row">
        <div class="span12">
          {{> /static/mustache/base_templates/dates_list.mustache}}
        </div>
      </div>

      <div class="row-fluid wrap-row">
        <div class="span12">
          <h6>Code</h6>
          <div class="side-content">
            {{slug}}
          </div>
        </div>
      </div>

      <div class="row-fluid wrap-row">
        <div class="span12">
          {{> /static/mustache/base_templates/request_type.mustache}}
        </div>
      </div>

    </div>
  </div>

  <div class="tabs-wrap">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">
        Comments and Responses ({{comments.length}})
      </a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade in active" id="tab1">
        <div class="tree-item-add">
          <add-comment data="comments"></add-comment>
        </div>
        {{> /static/mustache/base_templates/comment_list.mustache}}
      </div>

    </div>
  </div>
</section>
{{/instance}}
