
  <li class="tree-item governance" id="content_{{instance.slug}}" data-id="{{instance.id}}" data-object-id="{{instance.id}}" data-object-type="{{instance.constructor.shortName.toLowerCase}}" data-object-meta-type="section" data-model="true">
    <div class="item-main" {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span9">
            <div class="item-data">
              <div class="tree-title-area">
                <i class="grcicon-{{instance.constructor.table_singular}}-color"></i>
                <span class="tree-code">{{instance.slug}}</span>
                {{instance.title}}{{#parent}}, child of {{instance.title}}{{/parent}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{#pack list=instance.business_objects na=na id=id}}
                <i class="grcicon-object-black"></i>
                {{#with list}}
                  {{#if length}} 
                    <span>{{length}}</span>
                  {{else}}
                    <strong class="error">0</strong>
                  {{/if}}
                {{/with}}
              {{/pack}}
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{#pack list=instance.controls na=na id=id}}
                <i class="grcicon-control-black"></i>
                {{#with list}}
                  {{#if length}} 
                    <span>{{length}}</span>
                  {{else}}
                    <strong class="error">0</strong>
                  {{/if}}
                {{/with}}
              {{/pack}}
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{#pack list=instance.objectives na=na id=id}}
                <i class="grcicon-objective-black"></i>
                {{#with list}}
                  {{#if length}} 
                    <span>{{length}}</span>
                  {{else}}
                    <strong class="error">0</strong>
                  {{/if}}
                {{/with}}
              {{/pack}}
            </div>
          </div>
        </div>
      </a>
    </div>

    {{#if expanded}}
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">

        <div class="row-fluid">

          <div class="span6">
            {{#edit_sections}}
              <a href="javascript://" class="info-action" data-toggle="modal-ajax-form" data-object-plural="{{model.table_plural}}" data-object-singular="{{model.model_singular}}" data-modal-reset="reset" data-modal-class="modal-wide" title="Edit {{model.model_title}}" data-object-id="{{instance.id}}">
                <i class="grcicon-edit"></i>
                Edit Section
              </a>
            {{/edit_sections}}
          </div>

          <div class="span6">
          {{#if mappings}}
            <a href="javascript://" class="info-action unmap pull-right" data-toggle="unmap">
              {{#mappings}}<span class="mapping" {{data 'mapping'}}></span>{{/mappings}}
              <i class="grcicon-remove"></i>
              {{unmap_or_delete instance mappings}}
            </a>
          {{/if}}
          </div>

        </div>

        <div class="show-description">
          <div class="row-fluid">
            <div class="span12">
              <div class="tree-description short">
                {{^instance.description}}
                  <p><i>No text for this section/clause</i></p>
                {{/instance.description}}
                {{{instance.description}}}
              </div>
              {{{show_long}}}
            </div>
          </div>
        </div>
      </div>

      {{#if draw_children}}
        {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
          <div class="inner-tree">
            <h6>Objectives, Controls, and Business Objects ({{child_count}})</h6>
            {{#child_options}}
              <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
            {{/child_options}}
          </div>
        {{/if_null}}
      {{/if}}

    </div>
    {{/if}}
  </li>
