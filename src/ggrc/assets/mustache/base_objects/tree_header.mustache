  <div class="row-fluid">
    <div class="span4">
      <div class="title-heading oneline">
        {{model.title_singular}} Title
      </div>
    </div>
    <div class="span2">
      <div class="oneline">
        Owner
      </div>
    </div>
    <div class="span1">
      <div class="oneline">
