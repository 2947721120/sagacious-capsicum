{{#instance}}
<div class="row-fluid wrap-row">
  <div class="span6">
    <h6>Owner</h6>
    <p class="oneline">
    {{#if is_program}}
      {{#with_mapping 'authorizations' instance}}
        {{#each authorizations}}
          <span>
            {{#using role=instance.role}}
              {{#if_equals role.name 'ProgramOwner'}}
                {{#using contact=instance.person}}
                  {{{renderLive '/static/mustache/people/popover.mustache' person=contact}}}
                {{/using}}
              {{/if_equals}}
            {{/using}}
          </span>
        {{/each}}
      {{/with_mapping}}
    {{else}}
      {{#if owners.length}}
        {{#using contacts=owners}}
        {{#each contacts}}
          {{^if_equals @index 0}}
            <br>
          {{/if_equals}}
          {{{renderLive '/static/mustache/people/popover.mustache' person=this}}}
        {{/each}}
        {{/using}}
      {{else}}
        <span class="error">
          Not Assigned
        </span>
      {{/if}}
    {{/if}}
    </p>
  </div>
    <div class="span6">
      {{#using person=contact}}
      <h6>Primary Contact</h6>
      <p class="oneline">
        {{#if person}}
          {{{renderLive '/static/mustache/people/popover.mustache' person=person}}}
        {{else}}
          <span class="error">
            Not Assigned
          </span>      
        {{/if}}
      </p>
      {{/using}}
      {{#using person=secondary_contact}}
      {{#if person}}
      <h6>Secondary Contact</h6>
      <p class="oneline">
        {{#if person}}
          {{{renderLive '/static/mustache/people/popover.mustache' person=person}}}
        {{else}}
          <span class="error">
            Not Assigned
          </span>      
        {{/if}}
      </p>
      {{/if}}
      {{/using}}
    </div>
</div>
{{/instance}}
