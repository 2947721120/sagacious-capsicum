{{#instance}}
<div class="row-fluid">
  <div {{^if stacked}}class="span6"{{/if}}>
    {{#if owners.length}}
      {{#using contacts=owners}}
      {{#contacts}}
        <p>
          <strong>Owner:</strong>
          <span>{{firstnonempty name email}}</span>
        </p>
      {{/contacts}}
      {{/using}}
    {{else}}
      <p>
        <strong>Owner:</strong>
        <span class="error">
          Not Assigned
        </span>
      </p>
    {{/if}}
  </div>
  <div {{^if stacked}}class="span6"{{/if}}>
    <p>
      <strong>Contact:</strong>
      {{#using contact=contact}}
      {{#if contact}}
        <span>{{firstnonempty contact.name contact.email}}</span>
      {{else}}
        <span class="error">
          Not Assigned
        </span>
      {{/if}}
      {{/using}}
    </p>
  </div>
</div>
{{/instance}}
