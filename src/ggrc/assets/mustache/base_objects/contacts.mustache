{{#instance}}
<div class="row-fluid">
  <div class="span6">
    <h6>Owner</h6>
    <p class="oneline">
    {{#if is_program}}
      {{#with_mapping 'authorizations' instance}}
        {{#each authorizations}}
          <span>
            {{#using role=instance.role}}
              {{#if_equals role.name 'ProgramOwner'}}
                {{#using contact=instance.person}}
                  {{{renderLive '/static/mustache/people/popover.mustache' person=contact}}}
                {{/using}}
              {{/if_equals}}
            {{/using}}
          </span>
        {{/each}}
      {{/with_mapping}}
    {{else}}
      {{#if owners.length}}
        {{#using contacts=owners}}
        {{#contacts}}
          {{{renderLive '/static/mustache/people/popover.mustache' person=this}}}
        {{/contacts}}
        {{/using}}
      {{else}}
        <span class="error">
          Not Assigned
        </span>
      {{/if}}
    {{/if}}
    </p>
  </div>
  {{#using person=contact}}
    <div class="span6">
      <h6>Contact</h6>
      <p class="oneline">
      {{#if person}}
        {{{renderLive '/static/mustache/people/popover.mustache' person=person}}}
      {{else}}
        <span class="error">
          Not Assigned
        </span>      
      {{/if}}
      </p>
    </div>
  {{/using}}
</div>
{{/instance}}
