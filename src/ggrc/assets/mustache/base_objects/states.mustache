{{#instance.workflow_state}}
  <li class="person-holder">
    <a href="{{instance.viewLink}}#task_widget" class="info-action person-tooltip-trigger" data-title="Current Tasks" data-placement="left">
      {{#switch instance.workflow_state}}
        {{#case 'Verified'}}
          <span class="green"><em>Verified</em></span>
        {{/case}}
        {{#case 'Assigned'}}
          <span class="gray"><em>Assigned</em></span>
        {{/case}}
        {{#case 'Finished'}}
          <span class="gray"><em>Finished</em></span>
        {{/case}}
        {{#case 'InProgress'}}
          <span class="gray"><em>In progress</em></span>
        {{/case}}
        {{#case 'Overdue'}}
            <span class="error"><em>Overdue</em></span>
        {{/case}}
      {{/switch}}
      {{#with_mapping_count instance 'object_tasks'}}
        <i class="grcicon-task-black"></i>
        {{count}}
      {{/with_mapping_count}}
    </a>
    {{#with_mapping 'object_tasks' instance}}
    <div class="custom-popover-content">
      <div class="preview-container person-preview">
        <div class="profile-info">
          <ul>
            {{#object_tasks}}
            <li><i class="grcicon-task-black"></i>{{instance.title}}
            {{#switch instance.status}}
              {{#case 'Verified'}}
                <span class="green"><em>Verified</em></span>
              {{/case}}
              {{#case 'Assigned'}}
                <span class="gray"><em>Assigned</em></span>
              {{/case}}
              {{#case 'Finished'}}
                <span class="blue"><em>Finished</em></span>
              {{/case}}
              {{#case 'InProgress'}}
                <span class="yellow"><em>In progress</em></span>
              {{/case}}
            {{/switch}}
            {{^if_equals instance.status 'Verified'}}{{#is_overdue instance.end_date}}
              <span class="error"><em>Overdue</em></span>
            {{/if}}
            {{/is_equal}}
            </li>
            {{/object_tasks}}
          </ul>
          <a class="info-action" href="{{instance.viewLink}}#task_widget">View tasks <i class="grcicon-goto"></i></a>
        </div>
      </div>
    </div>
    {{/with_mapping}}
  </li>
{{/workflow_state}}
