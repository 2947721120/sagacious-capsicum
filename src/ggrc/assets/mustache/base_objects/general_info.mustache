{{#instance}}

  <div class="row-fluid">
    <div class="span12">
      <h6>Title</h6>
      <h3>{{title}}</h3>
      {{#if type}}
      <p>
        {{type.title}}
      </p>
      {{/if}}
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <h6>Description</h6>
      <div class="rtf-block">
        {{{firstnonempty description '<h4 class="no-data">No description</h4>'}}}
      </div>
    </div>
  </div>

{{/instance}}