<div class="openclose">
  {{#if_instance_of instance "Cycle|CycleTaskGroup|CycleTaskGroupObject|CycleTaskGroupObjectTask"}}
    {{#if instance.status}}
      <span class="status-label" {{addclass "status-" instance.status}} {{addclass "status-" instance.overdue}}></span>
    {{else}}
      {{#using p_task=instance.cycle_task_group_object_tasks}}
        <span class="status-label {{get_task_status p_task 'status'}} {{get_task_status p_task 'overdue'}}"></span>
      {{/using}}
    {{/if}}
  {{else}}
    {{#if instance.workflow_state}}
      <span class="status-label" {{addclass "status-" instance.workflow_state}}></span>
    {{else}}
      <span class="status-label"></span>
    {{/instance}}
  {{/if_instance_of}}
  <i class="grcicon-arrow-right"></i>
</div>
