<div class="selector-info" style="margin-left:-10%;">
  <h4>
    <i class="grcicon-{{constructor.table_singular}}-color"></i>
    {{ title }} {{constructor.title_singular}}
  </h4>
  {{#if description}}
    <div class="rtf">
      {{{description}}}
    </div>
  {{/if}}
  <div class="owner">
    <strong>Owner:</strong>
    {{#if owner}}
    {{#using owner=owner}}
    {{owner.name}}
    {{/using}}
    {{/if}}
  </div>
  <div class="object-url">
    <strong>URL:</strong>
    {{#if url}}
    <a href="{{schemed_url url}}" target="_blank">{{url}}</a>
    {{/if}}
  </div>
</div>
