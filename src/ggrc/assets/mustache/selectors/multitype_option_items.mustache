{{#options}}
  <li class="tree-item control" {{ data 'option' }} data-id="{{ id }}">
    <div class="item-main">
      <div class="simple-link">
        <div class="row-fluid">
          <div class="span11">
            <div class="item-data">
              <div class="tree-title-area">
                {{title}}
                <span class="url-link">
                  {{link}}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </li>
{{/options}}
