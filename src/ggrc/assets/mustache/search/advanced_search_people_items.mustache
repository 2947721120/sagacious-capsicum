{{#each options}}
<li class="tree-item control governance task-item" 
  data-object-type="{{instance.class.table_singular}}"
  {{#instance}}{{ data 'option' }}{{/instance}} 
  data-id="{{ instance.id }}">
    <div class="item-main">
      <div class="openclose">
      <a href="javascript://" class="openclose-placeholder">
           
        <div class="row-fluid">

          <div class="span12">
            <span class="tier-trigger">
            </span>
            <div class="item-data">
              <div class="tree-title-area">
                <i class="grcicon-{{instance.class.table_singular}}-color"></i>                 
                {{#if instance.name}}{{instance.name}}{{/if}}
                <span class="url-link">
                  {{#if instance.email}}{{instance.email}}{{/if}}
                </span>
              </div>
            </div>
          </div>
          
        </div>    
      
      </a>
      </div>
    </div>

    {{! #if expanded}}
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        <!--{{{renderLive '/static/mustache/people/tier2_content.mustache'}}}-->
        <div class="row-fluid">
          <div class="span6">
            {{#if instance.viewLink}}
              {{#is_allowed "view_object_page" instance}}
                <a href="{{instance.viewLink}}" class="info-action">
                  View {{instance.class.title_singular}}
                  <i class="grcicon-goto"></i>
                </a>
              {{/is_allowed}}
            {{/if}}
          </div>
          <div class="span6">
          &nbsp;
          </div>
        </div>
        
        <div class="row-fluid">
          <div class="span6">
            {{#if instance.email}}
            <div class="tree-info">
              Email:
              {{{render '/static/mustache/people/popover.mustache' person=instance show_email=true}}}
            </div>
            {{else}}
              &nbsp;
            {{/if}}
          </div>
        </div>

      </div>
    </div>
    {{!/if}}
</li>
{{/each}}