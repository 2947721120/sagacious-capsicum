{{#each options}}
<li class="tree-item control governance task-item" 
  data-object-type="{{instance.class.table_singular}}"
  {{#instance}}{{ data 'option' }}{{/instance}} 
  data-id="{{ instance.id }}">
    <div class="item-main">
      <div class="item-wrap">
        {{{render '/static/mustache/base_objects/open_close.mustache' instance=instance}}}
        <div class="select">
          <div class="item-data">
            <div class="row-fluid">
              <div class="span12">
                <div class="tree-title-area">
                  <i class="grcicon-{{instance.class.table_singular}}-color"></i>
                  {{#if instance.name}}{{instance.name}}{{/if}}
                  <span class="url-link">
                    {{#if instance.email}}{{instance.email}}{{/if}}
                  </span>
                  {{^if instance.is_enabled}}
                    <span class="user-disabled">
                      (Disabled)
                    </span>
                  {{/if}}
                </div>
              </div> <!-- span12 end -->
            </div> <!-- row-fluid end -->
          </div> <!-- item-data end-->
        </div> <!-- select end -->
      </div> <!-- item-wrap end -->
    </div> <!-- item-main end -->

    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        {{{renderLive '/static/mustache/people/tier2_content.mustache' is_in_selector=true}}}
      </div>
    </div>
</li>
{{/each}}