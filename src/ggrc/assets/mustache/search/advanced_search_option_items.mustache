{{#each options}}
<li class="tree-item task-item" data-object-type="{{instance.class.table_singular}}" {{#instance}}{{ data 'option' }}{{/instance}} data-id="{{ instance.id }}">
  <div class="item-main">
    <div class="item-wrap">
      <div class="openclose" {{data 'expandable'}}>
        <span class="status-label status-draft"></span>
        <i class="grcicon-arrow-right"></i>
      </div>
      <div class="select">
        <div class="item-data">      
          <div class="row-fluid">
            <div class="span8">
              <div class="tree-title-area">
                <i class="grcicon-{{instance.class.table_singular}}-color"></i>
                {{#if instance.name}}
                  {{instance.name}}
                {{else}}
                  {{instance.title}}
                {{/if}}
                <span class="url-link">
                {{#if instance.email}}
                  {{instance.email}}
                {{else}}  
                  {{instance.link}}
                {{/if}}
                </span>
              </div>
            </div> <!-- span8 end -->
            <div class="span4">
              <div class="show-details">
                {{#if instance.viewLink}}
                  {{#is_allowed "view_object_page" instance}}
                    <a href="{{instance.viewLink}}" target="_blank"><i class="grcicon-to-right"></i></a>
                  {{/is_allowed}}
                {{/if}}
              </div>
            </div>
          </div> <!-- row-fluid end -->
        </div> <!-- item-data end -->
      </div> <!-- select end -->
    </div> <!-- item-wrap end -->
  </div> <!-- item-main end -->


  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">
      {{#find_template 'tier2_content' instance}}
        {{{renderLive template}}}
      {{else}}
        <div class="show-description">
          <div class="row-fluid">
            <div class="span12">
              <div class="tree-description short">
                {{{instance.description}}}
              </div>
              {{{show_long}}}
            </div>
          </div>
        </div>
      {{/find_template}}
    </div>
  </div>

</li>
{{/each}}
