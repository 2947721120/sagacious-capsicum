{{#each options}}
<li class="tree-item control governance task-item" 
  data-object-type="{{instance.class.table_singular}}"
  {{#instance}}{{ data 'option' }}{{/instance}} 
  data-id="{{ instance.id }}">
  <div class="item-main">
    <div class="openclose">
    <a href="javascript://" class="openclose-placeholder">       
      <div class="row-fluid">
        <div class="span10">
          <span class="tier-trigger">
          </span>
          <div class="item-data">
            <div class="tree-title-area">
              <i class="grcicon-{{instance.class.table_singular}}-color"></i>
              {{#if instance.name}}
                {{instance.name}}
              {{else}}
                {{instance.title}}
              {{/if}}
              <span class="url-link">
              {{#if instance.email}}
                {{instance.email}}
              {{else}}  
                {{instance.link}}
              {{/if}}
              </span>
            </div>
          </div>
        </div>
      </div>      
    </a>
    </div>
  </div>

  {{! #if expanded}}
  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">
      {{!#pack instance=this}}
        {{#find_template 'tier2_content' instance}}
          {{{renderLive template}}}
        {{else}}
          <div class="show-description">
            <div class="row-fluid">
              <div class="span12">
                <div class="tree-description short">
                  {{{instance.description}}}
                </div>
                {{{show_long}}}
              </div>
            </div>
          </div>
        {{/find_template}}
      {{!/pack}}
    </div>
  </div>
  {{!/if}}
</li>
{{/each}}
