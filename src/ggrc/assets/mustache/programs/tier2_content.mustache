
        <div class="row-fluid">

          <div class="span6">
          {{#if instance.viewLink}}
          {{#is_allowed 'view_object_page' 'Program' context=instance.context}}
            <a href="{{instance.viewLink}}" class="info-action">
              View {{instance.class.title_singular}}
              <i class="grcicon-goto"></i>
            </a>
          {{/is_allowed}}
          {{/if}}
          </div>

          <div class="span6">
          {{#if allow_mapping}}
          {{#if mappings}}
          {{#is_allowed_all 'delete' mappings}}
          {{^is_dashboard}}
            <a href="javascript://" class="info-action unmap pull-right" data-toggle="unmap">
              {{#result}}<span class="result" {{data 'result'}}></span>{{/result}}
              <i class="grcicon-remove"></i>
              Unmap
            </a>
          {{/is_dashboard}}
          {{/is_allowed_all}}
          {{/if}}
          {{/if}}
          {{> /static/mustache/base_objects/edit_object_link.mustache}}
          </div>

        </div>

        {{#instance.description}}
        <div class="show-description">
          <div class="row-fluid">
            <div class="span12">
              <div class="tree-description">
                {{{instance.description}}}
              </div>

            </div>
          </div>
        </div>
        {{/instance.description}}

        {{{renderLive '/static/mustache/base_objects/mappings_detail.mustache' result=result parent_instance=parent_instance}}}

        {{^if_equals instance.class.table_singular 'person'}}
          {{{renderLive '/static/mustache/base_objects/contacts.mustache' is_program=true instance=instance}}}
        {{/if_equals}}

        {{#instance.url}}
        <div class="row-fluid">
          <div class="span6">
            <div class="tree-info">
              <strong>URL:</strong>
              <a class="url" data-popover-trigger="sticky-hover" data-sticky-popover="true" data-content="{{renderLive '/static/mustache/pbc/iframe_tooltip.mustache' url=instance.url}}" href="{{schemed_url instance.url}}" target="_blank">
                {{instance.url}}
              </a>
            </div>
          </div>
        </div>
        {{/instance.url}}
