<section class="info">
  {{#instance}}
  <h3>{{title}}</h3>
  {{#if type}}
  <p>
    {{type.title}}
  </p>
  {{/if}}
  <div class="rtf-block">
    {{{firstnonempty description '<h4 class="no-data">No description</h4>'}}}
  </div>
  <p>
    <a href="{{schemed_url url}}" class="inner-element" target="_blank">
      {{url}}
    </a>
  </p>
  <div class="row-fluid">
    <div class="span6">
      {{#if owners.length}}
        {{#using contacts=instance.owners}}
        {{#contacts}}
          <p>
            <strong>Owner:</strong>
            <span class="person-tooltip-trigger" data-placement="top">{{firstnonempty name email}}</span>
          </p>
        {{/contacts}}
        {{/using}}
      {{else}}
        <p>
          <strong>Owner:</strong>
          <span class="error">
            Not Assigned
          </span>
        </p>
      {{/if}}
    </div>
    <div class="span6">
      <p>
        <strong>Contact:</strong>
        {{#using contact=instance.contact}}
        {{#if contact}}
          <span class="person-tooltip-trigger" data-placement="top">{{firstnonempty contact.name contact.email}}</span>
        {{else}}
          <span class="error">
            Not Assigned
          </span>
        {{/if}}
        {{/using}}
      </p>
    </div>
  </div>

  {{{render_hooks 'Program.extended_info'}}}

  {{#is_allowed 'update' instance context='for'}}
  <p>
    <a href="javascript://" class="info-edit" data-toggle="modal-ajax-form" data-object-plural="{{model.table_plural}}" data-object-singular="{{model.model_singular}}" data-modal-reset="reset" data-modal-class="modal-wide" title="Edit {{model.model_title}}" data-object-id="page">
      <i class="grcicon-edit"></i>
      <span>Edit {{model.model_title}}</span>
    </a>
  </p>
  {{/is_allowed}}
  <p>
    <small>Code: {{slug}} | Created: {{date created_at}}</small>
  </p>
  {{/instance}}

</section>
