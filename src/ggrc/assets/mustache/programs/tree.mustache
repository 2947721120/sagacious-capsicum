  <li class="tree-item governance" data-object-id="{{instance.id}}" data-object-type="{{instance.class.table_singular}}">
    <div class="item-main" {{#instance}}{{data 'model'}}{{/instance}}>
      <div class="openclose">
        <a class="openclose-placeholder" href="javascript://"> </a>
        <div class="row-fluid">
          <div class="span12">

            <ul class="tree-action-list">
              {{#infer_roles instance}}
                <li>
                  <div class="item-data">
                    <div class="tree-title-area">
                      <span class="role">
                        {{.}}
                      </span>
                    </div>
                  </div>
                </li>
              {{/infer_roles}}
              <li>
                {{{renderLive '/static/mustache/base_objects/relevance_action.mustache' instance=instance parent_instance=parent_instance}}}
              </li>
              {{#instance}}
                {{#is_private}}
                  <li>
                    <div class="counter">
                      <i class="grcicon-private"></i>
                    </div>
                  </li>
                {{/is_private}}
              {{/instance}}

              {{^instance.contact}}
                <li>
                  <div class="counter">
                    <i class="grcicon-people-warning"></i>
                  </div>
                </li>
              {{/instance.contact}}
            </ul>

            <div class="item-data">
              <div class="tree-title-area">
                <i class="grcicon-{{instance.class.table_singular}}-color"></i>
                {{#instance.title}}
                  {{instance.title}}
                {{/instance.title}}
                {{^instance.title}}
                  {{{firstnonempty instance.description_inline ''}}}
                {{/instance.title}}
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>

    {{#if expanded}}
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">

        <div class="row-fluid">

          <div class="span6">
          {{#if instance.viewLink}}
          {{#is_allowed 'view_object_page' 'Program' context=instance.context}}
            <a href="{{instance.viewLink}}" class="info-action">
              View {{instance.class.title_singular}}
              <i class="grcicon-goto"></i>
            </a>
          {{/is_allowed}}
          {{/if}}
          </div>

          <div class="span6">
          {{#if allow_mapping}}
          {{#if mappings}}
          {{#is_allowed_all 'delete' mappings}}
          {{^is_dashboard}}
            <a href="javascript://" class="info-action unmap pull-right" data-toggle="unmap">
              {{#result}}<span class="result" {{data 'result'}}></span>{{/result}}
              <i class="grcicon-remove"></i>
              Unmap
            </a>
          {{/is_dashboard}}
          {{/is_allowed_all}}
          {{/if}}
          {{/if}}
          {{> /static/mustache/base_objects/edit_object_link.mustache}}
          </div>

        </div>

        {{#instance.description}}
        <div class="show-description">
          <div class="row-fluid">
            <div class="span12">
              <div class="tree-description">
                {{{instance.description}}}
              </div>

            </div>
          </div>
        </div>
        {{/instance.description}}

        {{{renderLive '/static/mustache/base_objects/mappings_detail.mustache' result=result parent_instance=parent_instance}}}

        {{^if_equals instance.class.table_singular 'person'}}
          {{{renderLive '/static/mustache/base_objects/contacts.mustache' is_program=true instance=instance}}}
        {{/if_equals}}

        {{#instance.url}}
        <div class="row-fluid">
          <div class="span6">
            <div class="tree-info">
              <strong>URL:</strong>
              <a class="url" data-popover-trigger="sticky-hover" data-sticky-popover="true" data-content="{{renderLive '/static/mustache/pbc/iframe_tooltip.mustache' url=instance.url}}" href="{{schemed_url instance.url}}" target="_blank">
                {{instance.url}}
              </a>
            </div>
          </div>
        </div>
        {{/instance.url}}
      </div>

      {{#if draw_children}}
        {{#prune_context}} {{! this line is just chopping the context stack down to one element}}
            {{#child_options}}
              <div class="inner-tree">
                <h6>{{firstnonempty title_plural model.title_plural}} ({{list.length}})
                {{{renderLive '/static/mustache/base_objects/relevance_action.mustache' list=original_list parent_instance=instance model=model multiple_mapping_case=true}}}
                </h6>
                <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
              </div>
            {{/child_options}}
        {{/prune_context}}
      {{/if}}

    </div>
    {{/if}}
  </li>
