{{#list}}
  <li class="tree-item governance" data-object-id="{{instance.id}}" data-object-sub-type="{{instance.lowercase_kind}}" data-object-type="{{instance.constructor.shortName}}" data-object-meta-type="directive">
    <div class="item-main" {{data 'model'}}>
      <a class="openclose" href="javascript://">
        <div class="row-fluid">
          <div class="span10">
            <div class="item-data">
              <div class="tree-title-area">
                <i class="grcicon-{{instance.constructor.table_singular}}-color"></i>
                {{instance.title}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{^instance.owner}}
                <i class="grcicon-people-warning"></i>
              {{/instance.owner}}
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              <i class="grcicon-section-black"></i>
              {{instance.sections.length}}
            </div>
          </div>
        </div>
      </a>
    </div>
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        <div class="row-fluid">
          <div class="span12">
            <div class="tree-description short">
              {{{firstnonempty description '<p><i>No description</i></p>'}}}
            </div>
            <a href="javascript://" class="show-long">
              ...more
            </a>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span8">
            <div class="tree-info">
              <strong>Owner:</strong>
              {{^instance.owner}}
                <span class="error">
                  Not Assigned
                </span>
              {{/instance.owner}}
              {{#if instance.owner}}
                {{instance.owner.name}}
              {{/if}}
            </div>
          </div>
          <div class="span4">
            <!--
              <a href="#" class="info-action pull-right" rel="tooltip" title="Edit Contract" data-placement="left">
                Edit
                %i.grcicon-edit
              </a>
            -->
          </div>
        </div>
        <div class="row-fluid">
          <div class="span8">
            <div class="tree-info">
              {{! FIXME: Add tree item - should be Contract OR Regulation OR Policy NOT Directive }}
              <strong>URL:</strong>
              {{^if_null instance.url}}
                <a class="url" href="{{instance.url}}">
                  {{instance.url}}
                </a>
              {{/if_null}}
              {{#if_null instance.url}}
                <i>No URL</i>
              {{/if_null}}
            </div>
          </div>
          <div class="span4">
            <a href="{{instance.viewLink}}" class="info-action pull-right" rel="tooltip" title="View {{instance.constructor.table_singular}}" data-placement="left">
              View
              <i class="grcicon-goto"></i>
            </a>
          </div>
        </div>
      </div>
      
      {{#if draw_children}}
        {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
          <div class="inner-tree">
            {{#child_options}}
              <h6>Sections ({{instance.sections.length}})</h6>
              <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")._data) }}></ul>
            {{/child_options}}
          </div>
        {{/if_null}}
      {{/if}}
      
      
    </div>
  </li>
{{/list}}

{{! FIXME: Add tree item - should be Contract OR Regulation OR Policy NOT Directive }}
<li class="tree-item-add">
  <div class="row-fluid">
    <div class="span12">

      {{#if_match model.shortName '^(Directive|Regulation)$'}}
      <a data-modal-reset="reset" data-toggle="modal-selector" href="javascript://" data-modal-class="modal-wide" data-related-title-singular="Regulation" data-related-title-plural="Regulations" data-modal-selector-options="program_directives" data-join-object-type="Directive" data-join-object-id="{{parent_instance.id}}" data-child-meta-type="Regulation" data-child-property="directive_id" data-join-query="directive.kind__in=Regulation">
        <i class="grcicon-regulation-color"></i>
        + Regulation
      </a>
      {{/if_match}}
      {{#if_equals model.shortName 'Directive'}}&nbsp;&nbsp;{{/if_equals}}
      {{#if_match model.shortName '^(Directive|Contract)$'}}
      <a data-modal-reset="reset" data-toggle="modal-selector" href="javascript://" data-modal-class="modal-wide" data-related-title-singular="Contract" data-related-title-plural="Contracts" data-modal-selector-options="program_directives" data-join-object-id="{{parent_instance.id}}" data-join-object-type="Directive" data-child-meta-type="Contract" data-child-property="directive_id" data-join-query="directive.kind__in=Contract">
        <i class="grcicon-contract-color"></i>
        + Contract
      </a>
      {{/if_match}}
      {{#if_equals model.shortName 'Directive'}}&nbsp;&nbsp;{{/if_equals}}
      {{#if_match model.shortName '^(Directive|Policy)$'}}
      <a data-modal-reset="reset" data-toggle="modal-selector" href="javascript://" data-modal-class="modal-wide" data-related-title-singular="Policy" data-related-title-plural="Policies" data-modal-selector-options="program_directives" data-join-object-id="{{parent_instance.id}}" data-join-object-type="Directive" data-child-meta-type="Policy" data-child-property="directive_id" data-join-query="directive.kind__in=Company+Policy,Org+Group+Policy,Data+Asset+Policy,Product+Policy,Contract-Related+Policy,Company+Controls+Policy">
        <i class="grcicon-policy-color"></i>
        + Policy
      </a>
      {{/if_match}}

    </div>
  </a>
</li>
