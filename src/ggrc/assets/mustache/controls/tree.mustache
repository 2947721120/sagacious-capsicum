{{#list}}
  <li class="tree-item governance" data-object-id="{{instance.id}}" data-object-type="control">
    <div class="item-main" {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span11">
            <div class="item-data">
              <div class="tree-title-area">
                {{#if instance.title}}
                  {{instance.title}}
                {{/if}}
                {{^instance.title}}
                  {{{firstnonempty instance.description_inline ''}}}
                {{/instance.title}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{^instance.owner}}
                <i class="grcicon-people-warning"></i>
              {{/instance.owner}}
            </div>
          </div>
        </div>
      </a>
    </div>
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">

        <div class="row-fluid">
          <div class="span6">
            <a href="/controls/{{instance.id}}" class="info-action">
              View Control
              <i class="grcicon-goto"></i>
            </a>
          </div>
          
          {{! UNMAP
          <div class="span6">
            <a href="javascript://" class="info-action unmap pull-right">
              <i class="grcicon-remove"></i>
              Unmap
            </a>
          </div>
          }}
          
        </div>

        {{#instance.description}}
          <div class="show-description">
            <div class="row-fluid">
              <div class="span12">
                <div class="tree-description short">
                  {{{instance.description}}}
                </div>
                <a href="javascript://" class="show-long">...more</a>
              </div>
            </div>
          </div>
        {{/instance.description}}

        <div class="row-fluid">
          <div class="span6">
            <div class="tree-info">
              <strong>Owner:</strong>
              {{^instance.owner}}
                <span class="error">
                  Not Assigned
                </span>
              {{/instance.owner}}
              {{#if instance.owner}}
                {{instance.owner.name}}
              {{/if}}
            </div>
          </div>
          <div class="span6">
            <div class="tree-info">
              <strong>URL:</strong>
              {{^if_null instance.url}}
                <a class="url" href="{{instance.url}}">
                  {{instance.url}}
                </a>
              {{/if_null}}
              {{#if_null instance.url}}
                <i>No URL</i>
              {{/if_null}}
            </div>
          </div>
        </div>
      </div>

      {{#if draw_children}}
        {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
          <div class="inner-tree">
            {{#child_options}}
              <h6>{{firstnonempty title_plural model.title_plural}} ({{list.length}})</h6>
              <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
            {{/child_options}}
          </div>
        {{/if_null}}
      {{/if}}

    </div>
  </li>
{{/list}}
<li class="tree-item tree-item-add">
  <div class="row-fluid">
    <div class="span12">
      
      {{#if_equals parent_instance.constructor.shortName "Section"}}
        <a
          href="javascript://"
          rel="tooltip"
          data-placement="left"
          data-toggle="modal-selector"
          data-modal-selector-options="section_controls"
          data-modal-class="modal-wide"
          data-original-title="Map {{model.title_singular}} to this {{parent_instance.constructor.shortName}}"
          data-join-object-id="{{parent_instance.id}}"
          data-join-object-type="{{parent_instance.constructor.shortName}}">
          + {{model.title_singular}}
        </a>
      {{else}}
      {{#if_match parent_instance.constructor.shortName '^(System|Process)$'}}
        <a
          href="javascript://"
          rel="tooltip"
          data-placement="left"
          data-toggle="modal-selector"
          data-modal-selector-options="system_controls"
          data-modal-class="modal-wide"
          data-original-title="Map {{model.title_singular}} to this {{parent_instance.constructor.shortName}}"
          data-join-object-id="{{parent_instance.id}}"
          data-join-object-type="{{parent_instance.constructor.shortName}}">
          + {{model.title_singular}}
        </a>
      {{else}}
      {{#if_equals parent_instance.constructor.shortName "Program"}}
        <a
          href="javascript://"
          class="section-create"
          rel="tooltip"
          data-placement="left"
          data-toggle="modal-selector"
          data-modal-selector-options="program_controls"
          data-modal-class="modal-wide"
          data-original-title="Map {{model.title_singular}} to this {{parent_instance.constructor.shortName}}"
          data-join-object-id="{{parent_instance.id}}"
          data-join-object-type="{{parent_instance.constructor.shortName}}">
          + {{model.title_singular}}
        </a>
      {{else}}
        <a
          href="javascript://"
          class="section-create"
          rel="tooltip"
          data-placement="left"
          data-toggle="modal-selector-dispatch"
          data-modal-class="modal-wide"
          data-original-title="Map {{model.title_singular}} to this {{parent_instance.constructor.shortName}}"
          data-join-option-type="{{model.shortName}}"
          data-join-object-id="{{parent_instance.id}}"
          data-join-object-type="{{parent_instance.constructor.shortName}}">
          + {{model.title_singular}}
        </a>
      {{/if_equals}}
      {{/if_match}}
      {{/if_equals}}
      &nbsp;
      &nbsp;
      {{#if_match parent_instance.constructor.shortName '^(Directive|Regulation|Policy|Contract)$'}}
        <a href="{{parent_instance.viewLink}}/import_controls" class="section-import">
          <i class="grcicon-imp-exp"></i>
          Import Controls
        </a>
        &nbsp;
        &nbsp;
        <a href="{{parent_instance.viewLink}}/export_controls" class="section-import">
          <i class="grcicon-imp-exp"></i>
          Export Controls
        </a>
      {{/if_match}}
    </div>
  </div>
</li>
