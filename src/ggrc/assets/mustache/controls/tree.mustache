{{#list}}
  <li class="tree-item governance" data-object-id="{{instance.id}}" data-object-type="control">
    <div class="item-main" {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span11">
            <div class="item-data">
              <div class="tree-title-area">
                <i class="grcicon-{{instance.constructor.table_singular}}-color"></i>
                {{#if instance.title}}
                  {{instance.title}}
                {{/if}}
                {{^instance.title}}
                  {{{firstnonempty instance.description_inline ''}}}
                {{/instance.title}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{^instance.owner}}
                <i class="grcicon-people-warning"></i>
              {{/instance.owner}}
            </div>
          </div>
        </div>
      </a>
    </div>

    {{#if expanded}}
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        <div class="row-fluid">

          <div class="span6">
          {{#if instance.viewLink}}
            <a href="{{instance.viewLink}}" class="info-action">
              View {{instance.constructor.title_singular}}
              <i class="grcicon-goto"></i>
            </a>
          {{/if}}
          </div>

          <div class="span6">
          {{#if mappings}}
          {{#is_allowed_all 'delete' mappings}}
            <a href="javascript://" class="info-action unmap pull-right" data-toggle="unmap">
              {{#result}}<span class="result" {{data 'result'}}></span>{{/result}}
              <i class="grcicon-remove"></i>
              {{unmap_or_delete instance mappings}}
            </a>
          {{/is_allowed_all}}
          {{/if}}
          </div>

        </div>

        {{#instance.description}}
          <div class="show-description">
            <div class="row-fluid">
              <div class="span12">
                <div class="tree-description short">
                  {{{instance.description}}}
                </div>
                {{{show_long}}}
              </div>
            </div>
          </div>
        {{/instance.description}}

        <div class="row-fluid">
          <div class="span6">
            <div class="tree-info">
              <strong>Owner:</strong>
              {{^instance.owner}}
                <span class="error">
                  Not Assigned
                </span>
              {{/instance.owner}}
              {{#if instance.owner}}
                {{instance.owner.name}}
              {{/if}}
            </div>
          </div>
          <div class="span6">
            <div class="tree-info">
              <strong>URL:</strong>
              {{^if_null instance.url}}
                <a class="url" href="{{schemed_url instance.url}}" target="_blank">
                  {{instance.url}}
                </a>
              {{/if_null}}
              {{#if_null instance.url}}
                <i>No URL</i>
              {{/if_null}}
            </div>
          </div>
        </div>
      </div>

      {{#if draw_children}}
        {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
          <div class="inner-tree">
            <h6>Mapped Objects ({{child_count}})</h6>
            {{#child_options}}
              <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
            {{/child_options}}
          </div>
        {{/if_null}}
      {{/if}}

    </div>
    {{/if}}
  </li>
{{/list}}

{{#if allow_mapping_or_creating}}
{{#if_match parent_instance.constructor.shortName '^(Directive|Regulation|Policy|Contract)$'}}
{{#if allow_creating}}
{{#is_allowed 'create' model.shortName}}
<li class="tree-item tree-item-add">
  <div class="row-fluid">
    <div class="span12">
      <a href="javascript://" class="section-add">
        + {{model.title_singular}}
      </a>
      <a href="javascript://" class="section-create" data-toggle="modal-ajax-form" data-modal-reset="reset" data-dirty="#regulations, #combo" data-route="regulations" data-modal-class="modal-wide" data-object-singular="Control" data-object-plural="controls" data-object-params='{ "directive": {{parent_instance.id}} }'>
        <i class="grcicon-add-black"></i>
        Create {{model.title_singular}}
      </a>
      &nbsp;
      &nbsp;
      <a href="{{parent_instance.viewLink}}/import_controls" class="section-import">
        <i class="grcicon-imp-exp"></i>
        Import Controls
      </a>
      &nbsp;
      &nbsp;
      <a href="{{parent_instance.viewLink}}/export_controls" class="section-import">
        <i class="grcicon-imp-exp"></i>
        Export Controls
      </a>
    </div>
  </div>
</li>
{{/is_allowed}}
{{/if}}

{{else}}

{{#if allow_mapping}}
{{#is_allowed_to_map parent_instance model.shortName}}
<li class="tree-item tree-item-add">
  <div class="row-fluid">
    <div class="span12">
      <a
        href="javascript://"
        rel="tooltip"
        data-placement="left"
        data-toggle="multitype-modal-selector"
        data-join-option-type="{{model.shortName}}"
        data-join-object-id="{{parent_instance.id}}"
        data-join-object-type="{{parent_instance.constructor.shortName}}"
        data-original-title="Map {{firstnonempty title_singular model.title_singular 'Object'}} to this {{firstnonempty parent_instance.constructor.title_singular 'Object'}}">
        + {{model.title_singular}}
      </a>
    </div>
  </div>
</li>
{{/is_allowed_to_map}}
{{/if}}
{{/if_match}}
{{/if}}
