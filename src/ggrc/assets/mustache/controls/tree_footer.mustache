{{#is_allowed_to_map parent_instance model.shortName}}
{{#if allow_mapping_or_creating}}
<li class="tree-footer tree-item tree-item-add">
  <div class="row-fluid">
    <div class="span12 section-expandable">
      <a href="javascript://" class="section-add">
        + {{model.title_singular}}
      </a>
      <span class="section-expander">

        {{#if_match parent_instance.constructor.shortName '^(Directive|Regulation|Policy|Standard|Contract)$'}}
        {{#if allow_creating}}
        {{#is_allowed 'create' model.shortName context=null}}
        <a href="javascript://" class="section-create" data-toggle="modal-ajax-form" data-modal-reset="reset" data-dirty="#regulations, #combo" data-route="regulations" data-modal-class="modal-wide" data-object-singular="Control" data-object-plural="controls" data-object-params='{ "directive": { "type": "{{parent_instance.constructor.shortName}}", "id": {{parent_instance.id}} } }'>
          <i class="grcicon-add-black"></i>
          Create {{model.title_singular}}
        </a>
        {{/is_allowed}}
        {{/if}}

        {{else}}

        {{#if allow_mapping}}
        {{#is_allowed_to_map parent_instance model.shortName}}
        <a
          href="javascript://"
          rel="tooltip"
          data-placement="left"
          data-toggle="multitype-modal-selector"
          data-join-mapping="{{mapping}}"
          data-join-option-type="{{model.shortName}}"
          data-join-object-id="{{parent_instance.id}}"
          data-join-object-type="{{parent_instance.constructor.shortName}}"
          data-original-title="Map {{firstnonempty title_singular model.title_singular 'Object'}} to this {{firstnonempty parent_instance.constructor.title_singular 'Object'}}">
          + {{model.title_singular}}
        </a>
        {{/is_allowed_to_map}}
        {{/if}}
        {{/if_match}}

        {{#if_match parent_instance.constructor.shortName '^(Directive|Regulation|Policy|Standard|Contract|Program)$'}}
        {{#if allow_creating}}
        {{#is_allowed 'create' model.shortName context=null}}
        &nbsp;
        &nbsp;
        <a href="{{parent_instance.viewLink}}/import_controls?return_to={{param_current_location}}" class="section-import">
          <i class="grcicon-imp-exp"></i>
          Import Controls
        </a>
        &nbsp;
        &nbsp;
        {{#if list.length}}
        <a href="{{parent_instance.viewLink}}/export_controls?ids={{instance_ids list}}" class="section-import">
          <i class="grcicon-export"></i>
          Export Controls
        </a>
        {{/if}}
        {{/is_allowed}}
        {{/if}}
        {{/if_match}}

      </span>
    </div>
  </div>
</li>
{{/if}}
{{/is_allowed_to_map}}
