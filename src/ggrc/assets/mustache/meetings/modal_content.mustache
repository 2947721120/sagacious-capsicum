  {{!div class="modal-body"}}
  {{#instance}}
    <div class="row-fluid">
      <div class="span12">
        <label>Meeting Title <i class="grcicon-help-black" rel="tooltip" title="Title"></i></label>
        <input type="text" name="title" class="input-block-level" placeholder="Enter Title">
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4">
        <label>Choose Date</label>
        <input class="input-block-level date" name="start_at.date" data-also-set="end_at.date" data-toggle="datepicker" placeholder="MM/DD/YYYY" type="text" value="{{localize_date start_at}}">
      </div>
      <div class="span4">
        <label>Starts at</label>
        <select class="input-block-level" name="start_at.time">
          {{local_time_range '09:00' '17:00'}}
        </select>
        
        <label>Ends at</label>
        <select class="input-block-level">
          <option>9:00 AM</option>
          <option>10:00 AM</option>
          <option>11:00 AM</option>
          <option>12:00 AM</option>
          <option>1:00 PM</option>
          <option>2:00 PM</option>
          <option>3:00 PM</option>
          <option>4:00 PM</option>
          <option>5:00 PM</option>
        </select>
      </div>
      <div class="span4">
        Participants
        <select name="people" multiple="multiple" class="input-block-level">
          {{#using response=response}}
            {{#response.people}}
              {{#using person=this}}
                <option id="{{person.id}}">{{person.name}}</option>
              {{/using}}
            {{/response.people}}
          {{/using}}
        </select>
      </div>
    </div>
  {{/instance}}
  {{!/div}}
  