{{#list}}
  <li class="tree-item" data-id="{{instance.id}}" data-object-id="{{instance.id}}" data-object-type="{{instance.constructor.shortName.toLowerCase}}">
    <div class='item-main' {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class='row-fluid'>
          <div class='span12'>
            <div class='item-data'>
              <div class='tree-title-area'>
                <i class="grcicon-{{instance.constructor.table_singular}}-color"></i>
                {{#instance.name}}
                  {{trim}}
                {{/instance.name}}
                {{^instance.name}}
                  {{instance.email}}
                {{/instance.name}}
              </div>
            </div>
          </div>
        </div>
      </a>
    </div>

    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">

        <div class="row-fluid">

          <div class="span6">
          {{#if instance.viewLink}}
            <a href="{{instance.viewLink}}" class="info-action">
              View {{instance.constructor.title_singular}}
              <i class="grcicon-goto"></i>
            </a>
          {{/if}}
          </div>

          <div class="span6">
          {{#if mappings}}
            <a href="javascript://" class="info-action unmap pull-right" data-toggle="unmap">
              {{#mappings}}<span class="mapping" {{data 'mapping'}}></span>{{/mappings}}
              <i class="grcicon-remove"></i>
              Unmap
            </a>
          {{/if}}
          </div>

        </div>

        <div class="row-fluid">
          <div class="span6">
            <div class="tree-info">
              {{#if instance.email}}
              <a href='mailto:{{instance.email}}' rel='tooltip' title='{{instance.email}}'>
                {{#instance.name}}
                  {{trim}}
                {{/instance.name}}
                {{^instance.name}}
                  {{instance.email}}
                {{/instance.name}}
              </a>
              {{else}}
                {{instance.name}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      {{#if draw_children}}
        {{#if child_options.length}}
          {{^if_null 'z'}} {{! this line is just chopping the context stack down to one element}}
            <div class="inner-tree">
              <h6>Mapped Objects ({{child_count}})</h6>
              {{#child_options}}
                <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
              {{/child_options}}
            </div>
          {{/if_null}}
        {{/if}}
      {{/if}}

    </div>
  </li>
{{/list}}
