{{! dashboard object listing}}
<ul class="tree-structure new-tree">
  {{#list}}
    <li class="tree-item {{object_type}}" data-model="true" {{data 'model'}}>
      <div class="simple-link">
        <div class="row-fluid">
          <div class="span11">
            <div class="item-data">
              <div class="tree-title-area">
                {{firstnonempty name email}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              <a data-object-plural="people" data-object-singular="Person" data-object-id="{{id}}" data-modal-class="modal-wide" data-placement="left" data-toggle="modal-ajax-form" href="javascript://" rel="tooltip" title="Edit">
                <i class="grcicon-edit"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </li>
  {{/list}}
  <li class="tree-item tree-item-add">

    <a class="btn-add" data-object-plural="people" data-modal-class="modal-wide" href="javascript://" data-object-singular="Person" data-toggle="modal-ajax-form" data-modal-reset="reset">
      + Person
    </a>
  </li>
</ul>
