{{#instance}}

  {{#is_dashboard}}
    {{> /static/mustache/dashboard/info/info.mustache}}

  {{else}}
  <section class="info">
    {{#is_info_pin}}{{{render '/static/mustache/base_objects/info-pin.mustache'}}}{{/is_info_pin}}
    <div class="tier-content">
      {{#name}}
      <div class="row-fluid wrap-row">
        <div class="span12">
          <h6>Name</h6>
          <h3>{{name}}
              {{^if is_enabled}}
                  <span class="user-disabled">
                    (Disabled)
                  </span>
              {{/if}}
          </h3>
        </div>
      </div>
      {{/name}}

      {{#email}}
      <div class="row-fluid wrap-row">
        <div class="span12">
          <h6>Email</h6>
          <p>
          {{email}}
          </p>
        </div>
      </div>
      {{/email}}

      {{#company}}
      <div class="row-fluid wrap-row">
        <div class="span12">
          <h6>Company</h6>
            <p>
              {{company}}
            </p>
        </div>
      </div>
      {{/company}}
    </div><!-- tier-content end -->

  </section>

    <div class="info-widget-footer">
      <p>
        <small>
        <em>
          Created {{#if owners.length}}by {{#using contacts=owners}}{{#contacts}}{{{render '/static/mustache/people/popover.mustache' person=this}}}{{/contacts}}{{/using}}{{/if}} at {{date created_at}}
            &nbsp;&nbsp;&nbsp;&nbsp;
          Modified by {{#using person=modified_by}}{{{render '/static/mustache/people/popover.mustache' person=person}}}{{/using}} on {{date updated_at}}
        </em>
        </small>
      </p>
    </div>
  {{/is_dashboard}}
{{/instance}}
