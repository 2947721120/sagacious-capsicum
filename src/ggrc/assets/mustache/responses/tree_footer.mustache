{{#if allow_creating}}
  {{#if_can_create_response parent_instance}}
  <li class="tree-item tree-item-add">
    <div class="row-fluid">
      <div class="span12">
        {{#using audit=parent_instance.audit}}
        <a href="javascript://" class="section-create btn btn-small btn-draft" rel="tooltip" data-placement="right" data-original-title="Create Response" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="{{parent_instance.response_model_class}}" data-object-plural="responses" data-object-params='{ "{{parent_instance.class.table_singular}}": {"id" : {{parent_instance.id}}, "type" : "{{parent_instance.class.model_singular}}" }, "context": { "id" : {{firstexist audit.context.id "null"}}, "href" : "{{audit.context.href}}", "type" : "{{audit.context.type}}" } }'>
          <i class="grcicon-add-black"></i>
        </a>
        {{/using}}
      </div>
    </div>
  </li>
{{/if_can_create_response}}
{{/if}}
