  <li class="tree-item programs responses-list" data-object-id="{{instance.id}}" data-object-type="{{instance.constructor.table_singular}}">
    <div class="item-main" data-model="true" {{#instance}}{{data 'model'}}{{/instance}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span6">
            <div class="item-data">
              <div class="tree-title-area">
                Response Description
              </div>
            </div>
          </div>
          
          <div class="span3" {{ (el) -> el.ggrc_controllers_quick_form({ instance : el.closest('[data-model]').data('model')}); }}>
            <i class="grcicon-person-green pull-left"></i>
            <div class="objective-selector">
              {{!autocmplete doesn't work for now.  just display the name and force popping up the edit modal to change assignee}}
              <!--
                <input type="text" name="assignee.name" data-lookup="Person" class="span8 short-field" value="{{firstnonempty instance.assignee.name instance.assignee.email ''}}">
              -->
              {{#using owner=instance.owner}}
                {{firstnonempty owner.name owner.email}}
              {{/using}}
            </div>
          </div>
          
          <div class="span3" {{ (el) -> el.ggrc_controllers_quick_form({ instance : el.closest('[data-model]').data('model')}); }}>
            <select name="status" class="span10 short-field">
              {{#iterate 'Assigned' 'Accepted' 'Completed'}}
              <option {{#if_equals iterator instance.status}}selected="true"{{/if_equals}}>{{iterator}}</option>
              {{/iterate}}
            </select>
          </div>
        </div>
      </a>
    </div>
    
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        <div class="row-fluid">
          <div class="span12">
            <a class="utility-link" href="javascript://" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="Response" data-object-plural="responses" data-object-id="{{instance.id}}">
              <i class="grcicon-edit"></i>
              Edit PBC Response
            </a>
          </div>
        </div>
      </div>
      
      {{#child_options.0}}
      <div class="inner-tree">
        <h6>Mapped Objects ({{child_count}})</h6>
        <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data('options')) }}>
        </ul>
      </div>
      {{/child_options.0}}
      
      {{#if_equals instance.response_type 'documentation'}}
      {{#child_options.1}}
      <div class="inner-tree">
        <h6>Evidence ({{child_count}})</h6>
        <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data('options')) }}>
          <li class="tree-item tree-item-add tree-footer">
            <div class="row-fluid">
              <div class="span12 section-expandable">
                <a href="javascript://" class="section-add">
                  + Evidence
                </a>
                <span class="section-expander">
                  <a href="javascript://" class="section-create" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="Document" data-object-plural="Documents" data-object-params='{ "{{parent_instance.constructor.table_singular}}": {"id" : {{parent_instance.id}}, "type" : "{{parent_instance.constructor.model_singular}}" } }'>
                    <i class="grcicon-add-black"></i>
                    Evidence
                  </a>
                </span>
              </div>
            </div>
          </li>
        </ul>
      </div>
      {{/child_options.1}}
      {{/if_equals}}
      {{#if_equals instance.response_type 'interview'}}
      {{#child_options.2}}
      <div class="inner-tree">
        <h6>Meetings ({{child_count}})</h6>
        <ul class="tree-structure new-tree">
          <li class="tree-item tree-item-add tree-footer">
            <div class="row-fluid">
              <div class="span12 section-expandable">
                <a href="javascript://" class="section-add">
                  + Meeting
                </a>
                <span class="section-expander">
                  <a href="javascript://" class="section-create" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="Request" data-object-plural="requests" data-object-params='{ "{{parent_instance.constructor.table_singular}}": {"id" : {{parent_instance.id}}, "type" : "{{parent_instance.constructor.model_singular}}" } }'>
                    <i class="grcicon-add-black"></i>
                    Meeting
                  </a>
                </span>
              </div>
            </div>
          </li>
        </ul>
      </div>
      {{/child_options.2}}
      {{#child_options.3}}
      <div class="inner-tree">
        <h6>Participants ({{child_count}})</h6>
        <ul class="tree-structure new-tree">
          <li class="tree-item tree-item-add tree-footer">
            <div class="row-fluid">
              <div class="span12 section-expandable">
                <a href="javascript://" class="section-add">
                  + Participant
                </a>
                <span class="section-expander">
                  <a href="javascript://" class="section-create" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="Request" data-object-plural="requests" data-object-params='{ "{{parent_instance.constructor.table_singular}}": {"id" : {{parent_instance.id}}, "type" : "{{parent_instance.constructor.model_singular}}" } }'>
                    <i class="grcicon-add-black"></i>
                    Participant
                  </a>
                </span>
              </div>
            </div>
            <!--
              <div class="row-fluid">
                <div class="span12">
                  <i class="grcicon-person-green pull-left icon-field"></i>
                  <div class="objective-selector">
                    {{#using owner=owner}}
                    <input type="text" name="owner.email" data-lookup="Person" class="span4 audit-selector" value="{{firstnonempty owner.email ''}}">
                    {{/using}}
                  </div>
                </div>
              </div>
            -->
          </li>
        </ul>
      </div>
      {{/child_options.3}}
      {{/if_equals}}
      {{#if_equals instance.response_type 'population sample'}}
      {{#using population_sample=instance.population_sample}}
      <div class="tier-2-info-content population-content">
        <ul class="population-upload">
          <li>
            <div class="row-fluid">
              <div class="span8">
                <label>Population worksheet</label>
                <div class="row-fluid">
                  <div class="span9">
                    <input type="text" name="population.worksheet" class="input-block-level" placeholder="Enter URL">
                  </div>
                  <!--
                    <div class="span1">
                      <span class="choose">OR</span>
                    </div>
                    <div class="span2">
                      <a href="javascript://" data-toggle="modal-ajax-form" data-modal-reset="reset" class="btn btn-add" data-modal-class="modal-wide" data-object-singular="Request" data-object-plural="requests" data-object-params='{ "{{instance.constructor.table_singular}}": {"id" : {{instance.id}}, "type" : "{{instance.constructor.model_singular}}" } }'><i class="grcicon-upload"></i> Upload</a>
                    </div>
                  -->
                </div>
              </div>
              <div class="span4">
                <label>Population #</label>
                <input type="text" name="population.number" class="input-block-level" placeholder="example: 1000">
              </div>
            </div>
          </li>
          <li>
            <div class="row-fluid">
              <div class="span8">
                <label>Sample worksheet</label>
                <div class="row-fluid">
                  <div class="span9">
                    <input type="text" name="sample.worksheet" class="input-block-level" placeholder="Enter URL">
                  </div>
                  <!--
                    <div class="span1">
                      <span class="choose">OR</span>
                    </div>
                    <div class="span2">
                      <a href="#" class="btn btn-add"><i class="grcicon-upload"></i> Upload</a>
                    </div>
                  -->
                </div>
              </div>
              <div class="span4">
                <label>Sample #</label>
                <input type="text" name="sample.number" class="input-block-level" placeholder="example: 1000">
              </div>
            </div>
          </li>
          <li>
            <div class="row-fluid">
              <div class="span8">
                <label>Sample evidence</label>
                <div class="row-fluid">
                  <div class="span9">
                    <input type="text" name="sample.evidence" class="input-block-level" placeholder="Enter URL">
                  </div>
                  <!--
                    <div class="span1">
                      <span class="choose">OR</span>
                    </div>
                    <div class="span2">
                      <span class="btn btn-add"><i class="grcicon-upload"></i> Upload</span>
                    </div>
                  -->
                </div>
              </div>
              <div class="span4">&nbsp;</div>
            </div>
          </li>
        </ul>
      </div>
      {{/using}}
      {{/if_equals}}
      
    </div>
  </li>
