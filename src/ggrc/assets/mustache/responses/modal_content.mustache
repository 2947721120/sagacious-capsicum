{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  {{{ handle_context }}}
  <div class="row-fluid">
    <div class="span6">
      <label>
        PBC Response
        <span class="required">*</span>
      </label>
      <div class="wysiwyg-area">
        <textarea id="response_description" class="span12 double wysihtml5" name="pbc_response" placeholder="Response Description">{{{description}}}</textarea>
      </div>
    </div>
    <div class="span3">&nbsp;</div>
    <div class="span3">
      <label>
        Status
      </label>
      <select class="input-block-level" name="status" disabled>
        <option>Assigned</option>
        <option>Accepted</option>
        <option>Completed</option>
      </select>
    </div>
    <div class="row-fluid">
      {{#using assignee=assignee}}
      {{#with_current_user_as 'current_user'}}
      <div class="span6">
        <label>
          Assignee
          <span class="required">*</span>
        </label>
        <i class="grcicon-person-green pull-left icon-field"></i>
        <div class="objective-selector">
          <input type="text" name="assignee.email" class="span10" data-lookup="Person" value="{{firstnonempty assignee.email current_user.email ''}}">
        </div>
      </div>
      {{/with_current_user_as}}
      {{/using}}
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Test, Notes, Auditor Contact
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span6">
        <label>
          Test
        </label>
        <div class="wysiwyg-area">
          <textarea id="test_description" class="span12 double wysihtml5" name="test" placeholder="Enter Test">{{{description}}}</textarea>
        </div>
      </div>
      <div class="span6">
        <label>
          Notes
        </label>
        <div class="wysiwyg-area">
          <textarea id="notes_description" class="span12 double wysihtml5" name="notes" placeholder="Enter Notes">{{{description}}}</textarea>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <label>
          Audit Contact
        </label>
        <input class="span6" name="audit_contact" type="text" placeholder="Enter Auditor's contact email" value="">
      </div>
    </div>
  </div>
  <input type="hidden" name="res  <input type="hidden" name="response.id" value="{{response.id}}">
</form>
{{/instance}}
{{!/div}}
