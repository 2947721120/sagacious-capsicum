{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  {{{ handle_context }}}
  <div class="row-fluid">
    <div class="span6">
      <label>
        PBC Response
        <span class="required">*</span>
      </label>
      <div class="wysiwyg-area">
        <textarea id="response_description" class="span12 double wysihtml5" name="pbc_response" placeholder="Response Description">{{{description}}}</textarea>
      </div>
    </div>
    
    <div class="span6">
      <div class="row-fluid">
        <div class="span6">&nbsp;</div>
        <div class="span6">
          <label>
            Status
          </label>
          <select class="input-block-level" name="status" disabled>
            <option>Assigned</option>
            <option>Accepted</option>
            <option>Completed</option>
          </select>
        </div>
      </div>
      
      <div class="row-fluid">
        {{#using owner=owner}}
        {{#with_current_user_as 'current_user'}}
        <div class="span12">
          <label>
            Assignee
            <span class="required">*</span>
          </label>
          <i class="grcicon-person-green pull-left icon-field"></i>
          <div class="objective-selector">
            <input type="text" name="owner.email" class="input-wide" data-lookup="Person" value="{{firstnonempty owner.email current_user.email ''}}">
          </div>
        </div>
        {{/with_current_user_as}}
        {{/using}}
      </div>
      
    </div>
  </div>
  
  {{#using request=request}}
  <input type="hidden" name="request.id" value="{{request.id}}">
  <input type="hidden" name="response_type" value="{{request.request_type}}">
  {{/using}}
</form>
{{/instance}}
{{!/div}}
