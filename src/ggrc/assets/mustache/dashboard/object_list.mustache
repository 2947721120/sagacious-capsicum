{{! dashboard object listing}}
<ul class="tree-structure new-tree">
{{#list}}
  <li class="tree-item {{object_type}}" data-model="true">
    <div class="item-main" {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span11">
            <div class="item-data">
              <div class="tree-title-area">
                {{title}}
              </div>
            </div>
          </div>
          <div class="span1">
            <div class="counter">
              {{^owner}}
                <i class="grcicon-people-warning"></i>
              {{/owner}}
            </div>
          </div>
        </div>
      </a>
    </div>
    
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        <div class="row-fluid">
          <div class="span12">
            <div class="tree-description short">
              {{^description}}
                <p><i>No description</i></p>
              {{/description}}
              {{{description}}}
            </div>
            <a href="javascript://" class="show-long">...more</a>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span6">
            <div class="tree-info">
              <strong>Owner:</strong>
              {{^owner}}
                <span class="error">
                  Not Assigned
                </span>
              {{/owner}}
              {{#if owner}}
                {{owner.name}}
              {{/if}}
            </div>
          </div>
          <div class="span6">
            <div class="tree-info">
              <strong>URL:</strong>
              {{^if_null url}}
                <a class="url" href="{{url}}">
                  {{instance.url}}
                </a>
              {{/if_null}}
              {{#if_null url}}
                <i>No URL</i>
              {{/if_null}}
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span6">
          <a href="{{viewLink}}" class="info-action">
            View {{object_type}}
            <i class="grcicon-goto"></i>
          </a>
        </div>
      </div>
    </div>
  </li>
{{/list}}
</ul>
<ul class="new-tree">
  <li class="tree-item tree-item-add">
    {{#is_related}}
    <a
      href="javascript://"
      rel="tooltip"
      data-placement="left"
      data-toggle="modal-relationship-selector"
      data-modal-class="modal-wide"
      data-modal-reset="reset"
      data-original-title="Link {{model.title_singular.toLowerCase}} to this object"
      data-related-model="{{model.model_singular}}"
      data-related-title-singular="{{model.title_singular}}"
      data-related-title-plural="{{model.title_plural}}"
      data-related-side="source" {{! FIXME This should depend on relationship type }}
      data-related-table-plural="{{model.table_plural}}"
      data-related-model-singular="{{model.model_singular}}"
      data-relationship-type="" {{! FIXME This should be a real relationship type }}
      data-tab-target="#related-objects-{{find_params.relationship_type_id}}">
      + {{model.title_singular}} {{find_params.relationship_type_id}}
    </a>
    {{/is_related}}
    {{^is_related}}
    <a
      href="javascript://"
      rel="tooltip"
      data-placement="left"
      data-toggle="modal-ajax-form"
      data-object-plural="{{model.model_plural}}"
      data-object-singular="{{model.model_singular}}"
      data-modal-class="modal-wide"
      data-modal-reset="reset"
      data-form-target="refresh"
      data-original-title="Create a new {{model.title_singular.toLowerCase}}">
      + {{model.title_singular}}
    </a>
    {{/is_related}}
  </li>
</ul>
