{{#list}}
<li class="{{constructor.category}}" data-model="true" {{data 'model'}}>
  {{#using program=program}}
  <a href="{{program.viewLink}}#audit_widget" class="show-extended">
    <div class="row-fluid">
      <div class="span8">
        <span class="lhs-item">
          {{title}}
        </span>
      </div>
      <div class="span1">
        {{#is_private}}
          <i class="grcicon-private" rel="tooltip" title="Private"></i>
        {{/is_private}}
      </div>
      <div class="span2">
        &nbsp;
      </div>
    </div>
  </a>
  {{/using}}
</li>
{{/list}}
{{^list}}
<li class="spinner">
</li>
{{/list}}
{{^if_equals list.length count}}
<li class="view-more">
  <a href="javascript://">
    view more
    <i class="grcicon-down"></i>
  </a>
</li>
{{/if_equals}}
{{^is_allowed 'read' model.shortName context='any'}}
<li class="no-access">
  You do not have access to read this information.
</li>
{{/is_allowed}}
