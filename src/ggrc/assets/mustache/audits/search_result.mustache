{{#list}}
<li class="{{class.category}}" data-model="true" {{data 'model'}}>
  {{#using program=program}}
  <a href="{{#is_allowed 'view_object_page' 'Program' context=program.context}}{{program.viewLink}}{{else}}/dashboard{{/is_allowed}}#audit_widget/audit/{{id}}" class="show-extended">
      <div>
        <span class="lhs-item lhs-item-medium">
          {{title}}
        </span>
      </div>
      {{#is_private}}
      <div class="lhs-private">
        <i class="grcicon-private" rel="tooltip" title="Private"></i>
      </div>
      {{/is_private}}
  </a>
  {{/using}}
</li>
{{/list}}

{{#if_helpers '\
   ^is_allowed' 'read' model.shortName _0_context='any' '\
   and ^is_allowed' 'create' model.shortName _1_context='any' '\
   and ^is_allowed' 'read' 'Program' _2_context='any'}}
<li class="no-access">
  You do not have access to read this information.
</li>
{{/if_helpers}}

{{#list.is_loading}}
  <li class="spinny"  {{attach_spinner '{ "radius": 4, "length": 7, "width": 2 }' }}>
  </li>
{{/list.is_loading}}
