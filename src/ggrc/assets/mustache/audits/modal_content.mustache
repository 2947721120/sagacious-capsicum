{{!div class="modal-body"}}
<div class="hideable-holder">
{{#instance}}
<form action="javascript://">
  {{> /static/mustache/base_objects/form_restore.mustache}}

  {{#if new_object_form}}
  {{#if object_params.program}}
    <div class="row-fluid hidden">
      <div class="span6">
        <div class="spacing-bottom">
          <label>
            Program
          </label>
          <select class="input-block-level" name="program.id">
            <option value="{{object_params.program.id}}">{{object_params.program.title}}</option>
          </select>
        </div>
      </div>
    </div>
  {{else}}
    <div class="row-fluid">
      <div class="span6">
        <div class="spacing-bottom">
          <label {{attach_spinner '{ "radius": 3, "length": 3, "width": 2 }' 'display:inline-block; top: -5px; margin-left: 5px;' }}>
            Program
          </label>
          <select class="input-block-level" name="program.id" tabindex="1" autofocus>
            {{#all 'Program' '{ "context_id__null" : false, "require_permission": "update" }'}}
            <option value="{{id}}">{{title}}</option>
            {{/all}}
          </select>
        </div>
      </div>
    </div>
  {{/if}}
  {{else}}
    <div class="row-fluid hidden">
      <div class="span6">
        <div class="spacing-bottom">
          <label>
            Program
          </label>
          <select class="input-block-level" name="program.id">
            <option value="{{program.id}}">{{program.title}}</option>
          </select>
        </div>
      </div>
    </div>
  {{/if}}
  <div class="row-fluid">
    <div class="span6 {{#instance.computed_errors.title}}field-failure{{/instance.computed_errors.title}}">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Give new {{model.model_plural}} a name that's easy to search for and indicates the main goals of this {{model.model_singular}}."></i>
      </label>
      {{#if new_object_form}}
        {{#using program_reified=instance.program}}
        <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{default_audit_title title program_reified}}" tabindex="2">
        {{/using}}
      {{else}}
        <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}" tabindex="2">
      {{/if}}
      {{#instance.computed_errors.title}}<label class="help-inline warning">{{this}}</label>{{/instance.computed_errors.title}}
    </div>
    <div class="span3">
      <label>
        Internal Audit Lead
        <span class="required">*</span>
      </label>
      <i class="grcicon-person-green pull-left icon-field"></i>
      <div class="objective-selector">
        {{#using contact=instance.contact}}
          <input tabindex="3" type="text" name="contact.email" data-lookup="Person" class="span10 audit-selector search-icon" placeholder="Enter text to search for Internal Audit Lead" value="{{firstnonempty contact.email ''}}">
        {{/using}}
      </div>
    </div>
    <div class="span3 hidable">
      <label>
        Status
        <a href="javascript://" class="field-hide">hide</a>
      </label>
      <select class="input-block-level" name="status" {{#new_object_form}}disabled="true"{{/new_object_form}} tabindex="4">
        {{#iterate 'Planned' 'In Progress' 'Manager Review' 'Ready for External Review' 'Completed'}}
        <option {{#if_equals iterator instance.status}}selected="true"{{/if_equals}}>{{iterator}}</option>
        {{/iterate}}
      </select>
    </div>
  </div>
  {{#new_object_form}}
  <div class="row-fluid">
    <div class="span12 hidable">
      <label class="spacing">
        <a href="javascript://" class="field-hide">hide</a>
        <input type="checkbox" name="auto_generate" value="checked" tabindex="5">
        Auto-Generate PBC List based on Objectives <span class="small"><a href="javascript://">({{#using program=instance.program}}{{#with_mapping 'objectives' program}}{{objectives.length}}{{/with_mapping}}{{/using}} Objectives Found)</a></span>
      </label>
    </div>
  </div>
  {{/new_object_form}}
  <div class="row-fluid">
    <div class="span3 hidable">
      <label>
        Planned Start Date
        <a href="javascript://" class="field-hide">hide</a>
      </label>
      <input tabindex="6" class="input-block-level date" name="start_date" data-toggle="datepicker" data-before="end_date" placeholder="MM/DD/YYYY" type="text" value="{{localize_date start_date}}">
    </div>
    <div class="span3 hidable">
      <label>
        Planned End Date
        <a href="javascript://" class="field-hide">hide</a>
      </label>
      <input tabindex="7" class="input-block-level date" name="end_date" data-toggle="datepicker" data-after="start_date" placeholder="MM/DD/YYYY" type="text" value="{{localize_date end_date}}">
    </div>
    <div class="span6 hidable">
      <label>
        Planned Report Period (from - to):
        <a href="javascript://" class="field-hide">hide</a>
      </label>
      <div class="row-fluid">
        <div class="span6">
          <input tabindex="8" class="input-block-level date" name="report_start_date" data-toggle="datepicker" data-before="report_end_date" placeholder="MM/DD/YYYY" type="text" value="{{localize_date report_start_date}}">
        </div>
        <div class="span6">
          <input tabindex="9" class="input-block-level date" name="report_end_date" data-toggle="datepicker" data-after="report_start_date" placeholder="MM/DD/YYYY" type="text" value="{{localize_date report_end_date}}">
        </div>
      </div>
    </div>
  </div>
  
  <div>
    <div class="row-fluid">
      <div class="span6 hidable">
        <label>
          Description
          <i class="grcicon-help-black" rel="tooltip" title="Describe reason and purpose of the Audit."></i>
          <a href="javascript://" class="field-hide">hide</a>
        </label>
        <div class="wysiwyg-area">
          <textarea id="program_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description" tabindex="10">{{{description}}}</textarea>
        </div>
      </div>
      <div class="span6 hide-wrap hidable">      
        <div class="row-fluid inner-hide">
          <div class="span12 hidable">
            <label>
              Auditor
              <i class="grcicon-orggroup-color pull-left icon-field"></i>
              <a href="javascript://" class="field-hide">hide</a>
            </label>            
            <div class="objective-selector">
              {{! `with_auditors` requires `authorizations` mapping, so preload it }}
              {{#with_mapping 'authorizations' instance}}
              {{#with_auditors instance decoy=authorizations}}
                {{#using auditor=auditors.0.person}}
                <input tabindex="11" type="text" name="auditor.email" data-lookup="Person" class="span8 search-icon" placeholder="Enter text to search for Auditor" value="{{auditor.email}}">
                {{/using}}
              {{else}}
                <input tabindex="12" type="text" name="auditor.email" data-lookup="Person" class="span8 search-icon" placeholder="Enter text to search for Auditor" value="">
              {{/with_auditors instance}}
              {{/with_mapping 'authorizations' instance}}
            </div>
          </div>
        </div>
        <div class="row-fluid inner-hide">
          <div class="span12 hidable">
            <label>
              Audit Firm
              <i class="grcicon-orggroup-color pull-left icon-field"></i>
              <a href="javascript://" class="field-hide">hide</a>
            </label>
            <div class="objective-selector {{#instance.computed_errors.audit_firm}}field-failure{{/instance.computed_errors.audit_firm}}">
              {{#using firm=instance.audit_firm}}
              <input tabindex="13" type="text" name="audit_firm.email" data-lookup="OrgGroup" class="span8 search-icon" placeholder="Enter text to search for Audit Firm" value="{{firstnonempty firm.title ''}}">
              {{/using}}
              {{#instance.computed_errors.audit_firm}}<label class="help-inline warning">{{this}}</label>{{/instance.computed_errors.audit_firm}}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <label>
          Evidence Folder Path
        </label>
        <span class="large">/{{object_params.program_title}}/{{title}}</span>
      </div>
    </div>
  </div>
  <input type="hidden" name="slug" value="{{slug}}">
  {{#with_current_user_as 'current_user'}}<input type="hidden" name="modified_by_id" value="{{current_user.id}}">{{/with_current_user_as}}
</form>
{{/instance}}
<div class="hideable-holder">
{{!/div}}
