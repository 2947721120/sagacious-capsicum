{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  {{{ handle_context }}}
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Give new {{model.model_plural}} a name that's easy to search for and indicates the main goals of this {{model.model_singular}}."></i>
      </label>
      <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}">
    </div>
    <div class="span3">
      <label>
        Program
      </label>
      {{#if object_params.program}}
      <select class="input-block-level" name="program.id" disabled>
        <option value="{{object_params.program}}">{{object_params.program_title}}</option>
      </select>
      {{else}}
      <select class="input-block-level" name="program.id">
        {{#all 'Program'}}
        <option value="{{id}}">{{title}}</option>
        {{/all}}
      </select>
      {{/if}}
    </div>
    <div class="span3">
      <label>
        Status
      </label>
      <select class="input-block-level" name="status" disabled>
        <option>Planned</option>
        <option>In Progress</option>
      </select>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <label>
        <input type="checkbox" name="auto_generate">
        Auto-Generate PBC List based on Objectives <span class="small"><a href="#">(6 Objectives Found)</a></span>
      </label>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <label>
        Planned Start Date 
      </label>
      <input class="input-block-level date" name="start_date" data-toggle="datepicker" data-before="end_date" placeholder="MM/DD/YYYY" type="text" value="">
    </div>
    <div class="span3">
      <label>
        Planned End Date 
      </label>
      <input class="input-block-level date" name="end_date" data-toggle="datepicker" data-after="start_date" placeholder="MM/DD/YYYY" type="text" value="">
    </div>
    <div class="span6">
      <label>
        Planned Report Period (from - to):
      </label>
      <div class="row-fluid">
        <div class="span6">
          <input class="input-block-level date" name="report_start_date" data-toggle="datepicker" data-before="report_end_date" placeholder="MM/DD/YYYY" type="text" value="">
        </div>
        <div class="span6">
          <input class="input-block-level date" name="report_end_date" data-toggle="datepicker" data-after="report_start_date" placeholder="MM/DD/YYYY" type="text" value="">
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Description, Audit Lead, Audit Firm, gDrive Evidence Folder
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span6">
        <label>
          Description
          <i class="grcicon-help-black" rel="tooltip" title="The gGRC application will automatically provide codes for new objects.  If you would like to override this feature you may manually enter a code of your choosing.  You should have a specific reason for doing this."></i>
        </label>
        <div class="wysiwyg-area">
          <textarea id="program_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description">{{{description}}}</textarea>
        </div>
      </div>
      <div class="span6">
        <label>
          Audit Lead
        </label>
        <i class="grcicon-person-green pull-left icon-field"></i>
        <div class="objective-selector">
          <input href="#audit-lead" type="text" name="owner_id" data-toggle="collapse" class="span8 audit-selector" value="Predrag Kanazir">
          <ul id="audit-lead" class="sub-level collapse">
            <li data-model="true" {{data 'model'}}>
              <a href="{{viewLink}}" class="show-extended">
                Predrag Kanazir <span class="small">predrag@reciprocitylabs.com</span>
              </a>
            </li>
            <li data-model="true" {{data 'model'}}>
              <a href="{{viewLink}}" class="show-extended">
                Vladan Mitevski <span class="small">vladan@reciprocitylabs.com</span>
              </a>
            </li>
            <li data-model="true" {{data 'model'}}>
              <a href="{{viewLink}}" class="show-extended">
                Brad Momberger <span class="small">brad@reciprocitylabs.com</span>
              </a>
            </li>
            <li data-model="true" {{data 'model'}}>
              <a href="{{viewLink}}" class="show-extended">
                Dan Ring <span class="small">dan@reciprocitylabs.com</span>
              </a>
            </li>
            <li class="add-new">
              <a href="#">+ Create New</a>
            </li>
          </ul>
        </div>
        
        <label>
          Audit Firm
        </label>
        <i class="grcicon-orggroup-color pull-left icon-field"></i>
        <div class="objective-selector">
          <input href="#audit-firm" type="text" name="audit_firm" data-toggle="collapse" class="span8 audit-selector" value="Silverboots & Friends">
          <ul id="audit-firm" class="sub-level collapse">
            <li data-model="true" {{data 'model'}}>
              <a href="{{viewLink}}" class="show-extended">
                Silverboots & Friends
              </a>
            </li>
            <li data-model="true" {{data 'model'}}>
              <a href="{{viewLink}}" class="show-extended">
                Iron Man & Dart Wader
              </a>
            </li>
            <li data-model="true" {{data 'model'}}>
              <a href="{{viewLink}}" class="show-extended">
                Batman, Inc.
              </a>
            </li>
            <li data-model="true" {{data 'model'}}>
              <a href="{{viewLink}}" class="show-extended">
                Berlusconi Club
              </a>
            </li>
            <li class="add-new">
              <a href="#">+ Create New</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <label>
          gDrive Evidence Folder
        </label>
        <span class="large">/GRC Programs/SOX Compliance Audits/2013 Compliance Audit</span>
      </div>
    </div>
  </div>
  <input type="hidden" name="program.id" value='1'>
  <input type="hidden" name="slug" value="1">
  <input type="hidden" name="created_at" value="1">
  <input type="hidden" name="modified_by_id" value="1">
  <input type="hidden" name="updated_at" value="1">
  <input type="hidden" name="gdrive_evidence_folder" value="1">
  <input type="hidden" name="url" value="1">
</form>
{{/instance}}
{{!/div}}
