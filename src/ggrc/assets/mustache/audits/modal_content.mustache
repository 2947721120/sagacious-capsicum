{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  {{{ handle_context }}}
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Give new {{model.model_plural}} a name that's easy to search for and indicates the main goals of this {{model.model_singular}}."></i>
      </label>
      <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}">
    </div>
    <div class="span3">
      <label>
        Program
      </label>
      <select class="input-block-level" name="program_id" disabled>
        <option value="{{object_params.program}}">Program Title</option>
      </select>
    </div>
    <div class="span3">
      <label>
        Status
      </label>
      <select class="input-block-level" name="status" disabled>
        <option>Not Started</option>
        <option>Started</option>
      </select>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <label>
        <input type="checkbox" name="auto_generate">
        Auto-Generate PBC List based on Objectives <span class="small"><a href="#">(6 Objectives Found)</a></span>
      </label>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <label>
        Planned Start Date 
      </label>
      <input class="input-block-level date" name="start_date" placeholder="MM/DD/YYYY" type="text" value="{{start_date}}">
    </div>
    <div class="span3">
      <label>
        Planned End Date 
      </label>
      <input class="input-block-level date" name="end_date" placeholder="MM/DD/YYYY" type="text" value="{{end_date}}">
    </div>
    <div class="span6">
      <label>
        Planned Report Period (from - to):
      </label>
      <div class="row-fluid">
        <div class="span6">
          <input class="input-block-level date" name="report_start_date" placeholder="MM/DD/YYYY" type="text" value="{{report_start_date}}">
        </div>
        <div class="span6">
          <input class="input-block-level date" name="report_end_date" placeholder="MM/DD/YYYY" type="text" value="{{report_end_date}}">
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Description, Audit Lead, Audit Firm, gDrive Evidence Folder
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span6">
        <label>
          Description
          <i class="grcicon-help-black" rel="tooltip" title="The gGRC application will automatically provide codes for new objects.  If you would like to override this feature you may manually enter a code of your choosing.  You should have a specific reason for doing this."></i>
        </label>
        <div class="wysiwyg-area">
          <textarea id="program_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description">{{{description}}}</textarea>
        </div>
      </div>
      <div class="span6">
        <label>
          Audit Lead
        </label>
        <i class="grcicon-person-color pull-left icon-field"></i>
        <input type="text" class="span8" name="owner_id">
        
        <label>
          Audit Firm
        </label>
        <i class="grcicon-orggroup-color pull-left icon-field"></i>
        <input type="text" class="span8" name="audit_firm">
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <label>
          gDrive Evidence Folder
        </label>
        <span class="large">/GRC Programs/SOX Compliance Audits/2013 Compliance Audit</span>
        <span class="small"><a href="#">change</a></span>
      </div>
    </div>
  </div>
  <input type="hidden" name="slug" value="">
  <input type="hidden" name="created_at" value="">
  <input type="hidden" name="modified_by_id" value="">
  <input type="hidden" name="updated_at" value="">
  <input type="hidden" name="context_id" value="">
  <input type="hidden" name="gdrive_evidence_folder" value="">
  <input type="hidden" name="url" value="">
</form>
{{/instance}}
{{!/div}}
