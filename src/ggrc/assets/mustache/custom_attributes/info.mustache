<custom-attributes instance="instance">
  {{#with_custom_attribute_definitions}}
    {{#if loaded_definitions.length}}
      <div class="row-fluid">
        <div class="span12">
          <div class="info-expand-custom">
            <a class="show-hidden-fields info-show-hide-cusotm" href="javascript://">
              <span class="out">
                <i class="grcicon-show-arrow"></i>
                Show
              </span>
              <span class="in">
                <i class="grcicon-hide-arrow"></i>
                Hide
              </span>
              Custom Attributes
              <span class="hidden-fields out">
                {{#each loaded_definitions}}{{^if_equals @index 0}}, {{/if}}{{title}}{{/each}}
              </span>
            </a>
          </div>
        </div>
      </div>

      <div class="hidden-fields-area-custom" style="display:none;">
        <div class="bare">
          <div class="row-fluid">
            {{#each loaded_definitions}}
            <div class="span6">
              <h6>{{title}}</h6>
              <p data-custom-attribute="{{id}}" data-type="{{attribute_type}}">
              </p>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    {{/if}}
  {{else}}
    <div class="row-fluid">
      <div class="span12">
        Loading Custom Attributes...<span  {{attach_spinner '{ "radius": 4, "length": 7, "width": 2 }' 'display:inline-block; top: -6px; left: 20px;' }}></span>
      </div>
    </div>
  {{/with_custom_attribute_definitions}}
</custom-attributes>
