{{#each options}}
  <li class="tree-item task-item" data-object-type="{{instance.class.table_singular}}"{{#instance}}{{ data 'option' }}{{/instance}} data-id="{{ instance.id }}">
    <div class="item-main">
      <div class="item-wrap">
        <div class="openclose">
          <i class="grcicon-arrow-right"></i>
        </div>
        <div class="select">
          <div class="item-data">
            <div class="row-fluid">
              <div class="span10">
                <div class="tree-title-area">
                  {{#if instance.name}}{{instance.name}}{{/if}}
                  <span class="url-link">
                    {{#if instance.email}}{{instance.email}}{{/if}}
                  </span>
                  {{^if instance.is_enabled}}
                    <span class="user-disabled">
                      (Disabled)
                    </span>
                  {{/if}}
                </div>
              </div>

              <div class="span1">&nbsp;</div>

              <div class="span1">
                <div class="object-check" align="left">
                  {{#if mappings.length}}
                    {{#result_direct_mappings bindings_compute selected_object}}
                      <input type="checkbox" value="{{instance.title}}" checked="checked" disabled="true" class="object-check-single">
                    {{/result_direct_mappings}}
                  {{else}}
                    <input type="checkbox" value="{{instance.title}}" {{^if instance.is_enabled}}disabled="true"{{/if}} class="object-check-single">
                  {{/if}}
                </div>
              </div>
            </div>
          </div><!-- item-data end -->
        </div><!-- select end -->
      </div><!-- item-wrap end -->
    </div><!-- item-main end -->

    {{! #if expanded}}
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        {{{renderLive '/static/mustache/people/tier2_content.mustache' is_in_selector=true}}}
      </div>
    </div>
    {{!/if}}
  </li>
{{/each}}
