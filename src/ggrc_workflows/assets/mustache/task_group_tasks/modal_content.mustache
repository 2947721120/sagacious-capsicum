<form action="javascript://">
  <div class="row-fluid">
    <div class="span8">
      <label>
        Summary
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Give new {{model.model_singular}} a summary that is easy to search for and indicates the main goals of this {{model.model_singular}}"></i>
      </label>
      <input class="input-block-level required" id="task-title" placeholder="Enter Title" name="title" type="text" value="{{instance.title}}" tabindex="1">
      <br>
    </div>
    <div class="span4">
      {{#using contact=instance.contact model_singular=model.model_singular}}
      <label>
        Assignee
        <i class="grcicon-help-black" rel="tooltip" title="This is the default assignee for this task."></i>
      </label>
      <input tabindex="3" class="input-block-level" name="contact.email" data-lookup="Person" placeholder="Enter email address" type="text" value="{{firstexist contact.email ''}}" />
      {{/using}}
      <br>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span8">
      <label>
        Task Details
        <i class="grcicon-help-black" rel="tooltip" title="Provide more details on the purpose of this {{model.model_singular}} and provide context for how and when this {{model.model_singular}} might be used."></i>
      </label>
      <div class="wysiwyg-area">
        <textarea id="program_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description" tabindex="2">{{instance.description}}</textarea>
      </div>
    </div>
    <input type="hidden" name="task_group" model="TaskGroup" value="{{object_params.task_group}}" />
    <input type="hidden" name="context" model="Context" value="{{object_params.context}}" />
    <input type="hidden" name="sort_index" value="{{object_params.sort_index}}" />
  </div>
</form>
