  <li data-object-id="{{instance.id}}" data-object-type="{{instance.class.table_singular}}">
    <div class="objective-selector field-wrap task-wrap" data-model="true" {{#instance}}{{data "model"}}{{/instance}}>
      <div class="row-fluid">
        <div class="span4">
          <div class="oneline">
            <a class="drag {{#parent_instance.lock_task_order}}disabled{{/parent_instance.lock_task_order}}" href="javascript://">
              <i class="grcicon-drag"></i>
            </a>
            <span class="inline-data-content">{{instance.title}}</span>
          </div>
        </div>
        <div class="span2">
          <div class="oneline">
            {{#using assignee=instance.contact}}
              <span class="inline-data-content inline-data-content-small">
                {{firstnonempty assignee.name assignee.email ''}}
              </span>
            {{/using}}
          </div>
        </div>
        <div class="span5">
          <div class="oneline">
            <span class="inline-data-content inline-data-content-small">
              {{#using task_group=instance.task_group}}
              {{#using workflow=task_group.workflow}}
              {{#switch workflow.frequency}}
              {{#case "one_time"}}
                {{localize_date instance.start_date}} - {{localize_date instance.end_date}}
              {{/case}}
              {{#case "weekly"}}
                {{#switch instance.relative_start_day}}
                {{#case 1}}Monday{{/case}}
                {{#case 2}}Tuesday{{/case}}
                {{#case 3}}Wednesday{{/case}}
                {{#case 4}}Thursday{{/case}}
                {{#case 5}}Friday{{/case}}
                {{/switch}}
                -
                {{#switch instance.relative_end_day}}
                {{#case 1}}Monday{{/case}}
                {{#case 2}}Tuesday{{/case}}
                {{#case 3}}Wednesday{{/case}}
                {{#case 4}}Thursday{{/case}}
                {{#case 5}}Friday{{/case}}
                {{/switch}}
              {{/case}}
              {{#case "monthly"}}
                Monthly {{instance.relative_start_day}} - {{instance.relative_end_day}}
              {{/case}}
              {{#case "quarterly"}}
                {{#switch instance.relative_start_month}}
                {{#case 1}}Jan/Apr/Jul/Oct{{/case}}
                {{#case 2}}Feb/May/Aug/Nov{{/case}}
                {{#case 3}}Mar/Jun/Sep/Dec{{/case}}
                {{/switch}}
                {{instance.relative_start_day}}
                -
                {{#switch instance.relative_end_month}}
                {{#case 1}}Jan/Apr/Jul/Oct{{/case}}
                {{#case 2}}Feb/May/Aug/Nov{{/case}}
                {{#case 3}}Mar/Jun/Sep/Dec{{/case}}
                {{/switch}}
                {{instance.relative_end_day}}
              {{/case}}
              {{#case "annually"}}
                {{#switch instance.relative_start_month}}
                {{#case 1}}Jan{{/case}}
                {{#case 2}}Apr{{/case}}
                {{#case 3}}Jul{{/case}}
                {{#case 4}}Oct{{/case}}
                {{#case 5}}Feb{{/case}}
                {{#case 6}}May{{/case}}
                {{#case 7}}Aug{{/case}}
                {{#case 8}}Nov{{/case}}
                {{#case 9}}Mar{{/case}}
                {{#case 10}}Jun{{/case}}
                {{#case 11}}Sep{{/case}}
                {{#case 12}}Dec{{/case}}
                {{/switch}}
                {{instance.relative_start_day}}
                -
                {{#switch instance.relative_end_month}}
                {{#case 1}}Jan{{/case}}
                {{#case 2}}Apr{{/case}}
                {{#case 3}}Jul{{/case}}
                {{#case 4}}Oct{{/case}}
                {{#case 5}}Feb{{/case}}
                {{#case 6}}May{{/case}}
                {{#case 7}}Aug{{/case}}
                {{#case 8}}Nov{{/case}}
                {{#case 9}}Mar{{/case}}
                {{#case 10}}Jun{{/case}}
                {{#case 11}}Sep{{/case}}
                {{#case 12}}Dec{{/case}}
                {{/switch}}
                {{instance.relative_end_day}}
              {{/case}}
              {{#case "continuous"}}
                continuous
              {{/case}}
              {{/switch}}
              {{/using}}
              {{/using}}
            </span>
          </div>
        </div>
        <div class="span1">
          {{#is_allowed 'update' instance context='for'}}
          <a class="utility-link pull-right info-action" href="javascript://" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="{{instance.class.model_singular}}" data-object-plural="{{instance.class.table_plural}}" data-object-id="{{instance.id}}">
            <i class="grcicon-edit"></i>
          </a>
          {{/is_allowed}}
        </div>
      </div>
    </div>
  </li>
