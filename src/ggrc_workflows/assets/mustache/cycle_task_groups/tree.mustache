<li class="tree-item task-item governance t-assigned" data-object-id="{{instance.id}}" {{addclass "t-" instance.status}} {{addclass "t-" instance.overdue}} data-object-type="{{instance.class.table_singular}}">
  <div class="item-main" {{#instance}}{{data 'model'}}{{/instance}}>
    <div class="openclose">
      <a class="openclose-placeholder" href="javascript://"> </a>
      <div class="row-fluid">
        <div class="span12">
          <ul class="tree-action-list">
            <li>
              {{{renderLive '/static/mustache/tasks/states.mustache' status=instance.status}}}
            </li>
            <li>
              <span class="counter">
                due
                <strong class="error">{{instance.end_date}}</strong>
              </span>
            </li>

            <li>
              {{#with_mapping_count instance 'cycle_task_group_objects'}}
              <span class="counter" rel="tooltip" data-placement="left" data-original-title="# of mapped objects">
                <i class="grcicon-object-black"></i>
                <strong class="error">{{count}}</strong>
              </span>
              {{/with_mapping_count}}
            </li>

            <!--li>
              <span class="counter" rel="tooltip" data-placement="left" data-original-title="# of mapped tasks">
                <i class="grcicon-task-black"></i>
                <strong class="error">{{tasks.length}}</strong>
              </span>
            </li-->
          </ul>
          <span class="tier-trigger"></span>
          <div class="item-data">
            <div class="tree-title-area">
              {{instance.title}}
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  {{#if expanded}}
  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">

      {{#instance.description}}
      <div class="show-description">
        <div class="row-fluid">
          <div class="span12">
            <div class="tree-description short">
              {{{instance.description}}}
            </div>
            {{{show_long}}}
          </div>
        </div>
      </div>
      {{/instance.description}}

    </div>

    {{#if draw_children}}
      {{#child_options}}
        <div class="inner-tree">
          <h6>Objects ({{list.length}})</h6>
          <ul class="tree-structure new-tree colored-list" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
        </div>
      {{/child_options}}
    {{/if}}

  </div>
  {{/if}}
</li>
