<!-- Right side workflow and task trees area -->
<dashboard-widgets class="span{{#system_role 'No Access'}}12{{/system_role}}{{^system_role 'No Access'}}9{{/system_role}} content-wrap">
    <div class="inner-content">
      {{#if workflow_view}}
        <section class="widget small-margin">
          <header class="header">
            <h2>My Workflows({{workflow_count}})</h2>
          </header>
          {{{ renderLive workflow_view }}}
          {{#workflow_show_all}}
          <a href="javascript://" class="workflow-trigger show-all">Show all my workflows</a>
          {{/workflow_show_all}}
        </section>
      {{/if}}

      <section class="widget dashboard small-margin">
        <header class="header widget-nav">
          <div class="row-fluid">
            <div class="span12">
              <ul>
                <li class="active task-tab">
                  <a href="javascript://">
                    My Tasks ({{task_count}})
                  </a>
                </li>
                <li class="audit-tab">
                  <a href="javascript://">
                    Audit Requests ({{audit_requests_count}})
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </header>
        <section class="content">
          {{#tasks_loaded}}
            {{> /static/mustache/dashboard/info/task_filters.mustache}}
          {{/tasks_loaded}}
          {{{ renderLive task_view }}}
          {{{ renderLive audit_requests_view }}}
        </section>
      </section><!-- Widget end -->

    </div><!-- inner-content end -->
</dashboard-widgets>
