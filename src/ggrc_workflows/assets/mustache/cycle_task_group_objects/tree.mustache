<li class="tree-item t-assigned" {{addclass "t-" instance.status}} {{addclass "t-" instance.overdue}} data-object-id="{{instance.id}}" data-object-type="{{instance.class.table_singular}}">
  <div class="item-main" {{#instance}}{{data 'model'}}{{/instance}}>
    <div class="item-wrap">
      <div class="openclose">
        <span class="status-label status-{{to_class instance.status '_'}}"></span>
        <i class="grcicon-arrow-right"></i>
      </div>
      <div class="select">
        <div class="item-data">
          <div class="row-fluid">
            <div class="span4">
              <div class="title tree-title-area">
                <i class="grcicon-object-black"></i>
                {{instance.title}}
              </div>
            </div>
            <div class="span4">
              <ul class="tree-action-list">
                <li>
                  {{{renderLive '/static/mustache/tasks/states.mustache' status=instance.status}}}
                </li>
                <li>
                  {{#with_mapping_count instance 'cycle_task_group_object_tasks'}}
                  <span class="counter" rel="tooltip" data-placement="left" data-original-title="# of tasks">
                    <i class="grcicon-task-black"></i>
                    <strong class="error">{{count}}</strong>
                  </span>
                  {{/with_mapping_count}}
                </li>
              </ul>
            </div>
          </div>
        </div><!-- item-data end -->
      </div><!-- select end -->
    </div><!-- item-wrap end -->
  </div><!-- item-main end -->

  {{#if expanded}}
  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">

      {{#if draw_children}}
        {{#child_options}}
          <div class="inner-tree">
            <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
          </div>
        {{/child_options}}
      {{/if}}

      {{#using object=instance.object}}

        <div class="details-wrap">
          <a class="btn btn-small btn-draft dropdown-toggle" href="#" data-toggle="dropdown"><i class="grcicon-setup-color"></i></a>
          <ul class="dropdown-menu" aria-labelledby="drop1" role="menu">
            <li>
              {{#if object.viewLink}}
              {{#is_allowed "view_object_page" object}}
                <a href="{{object.viewLink}}">
                  <i class="grcicon-goto"></i>
                  View {{object.class.title_singular}}
                </a>
              {{/is_allowed}}
              {{else}}
                <span class="error">Object deleted or inaccessible</span>
              {{/if}}
            </li>
          </ul>
        </div>

        <div class="tier-content">
          <div class="row-fluid wrap-row">
            <div class="span12">
              <h6>{{object.class.title_singular}}</h6>
              <h3>{{firstnonempty object.title instance.title}}</h3>
            </div>
          </div>
          <div class="row-fluid wrap-row">
            <div class="span12">
              <h6>{{object.class.title_singular}} description</h6>
              <div class="rtf-block">
                {{{firstnonempty object.description instance.description 'No description'}}}
              </div>
            </div>
          </div>
        </div>
      {{/using}}

    </div>
  </div>
  {{/if}}
</li>
