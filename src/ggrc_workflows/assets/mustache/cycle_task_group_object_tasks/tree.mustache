<li class="tree-item governance rq-draft 
  {{#if_equals instance.status 'InProgress'}}rq-requested{{/if}}
  {{#if_equals instance.status 'Verified'}}rq-accepted{{/if}}
  {{#if_equals instance.status 'Finished'}}rq-updated{{/if}}
  {{^if_equals instance.status 'Verified'}}{{#is_overdue end_date}}rq-rejected{{/is_overdue}}{{/if_equals}}"
  data-object-id="{{instance.id}}" data-object-type="{{instance.class.table_singular}}"
  >
  <div class="item-main" {{#instance}}{{data 'model'}}{{/instance}}>
    <div class="openclose">
      <a class="openclose-placeholder" href="javascript://"> </a>
      <div class="row-fluid">
        <div class="span12">
          <ul class="tree-action-list">
            <li>
              <span class="counter">
                due
                <strong class="error">{{instance.end_date}}</strong>
              </span>
              {{^if_equals instance.status 'Verified'}}{{#is_overdue instance.end_date}}<span class="error"><em>Overdue</em></span>{{/is_overdue}}{{/if}}
            </li>

            <li>
              {{#with_mapping_count instance 'cycle_task_entries'}}
              <span class="counter" rel="tooltip" data-placement="left" data-original-title="# of mapped objects">
                <i class="grcicon-object-black"></i>
                <strong class="error">{{count}}</strong>
              </span>
              {{/with_mapping_count}}
            </li>
            <li>
              <div class="request-control" {{ (el) -> el.ggrc_controllers_quick_form({ instance : el.closest('.item-main').data('model')}); }}>
                {{#if_equals instance.status 'Assigned'}}
                  <button class="btn btn-primary change-task-status {{instance._disabled}}" data-name="status" data-value="InProgress">Start</button>
                {{/status}}
                {{#if_equals instance.status 'InProgress'}}
                  <button class="btn change-task-status {{instance._disabled}}" data-name="status" data-value="Finished">Finish</button>
                {{/if_equals}}
                {{#if_equals instance.status 'Finished'}}
                  <button class="btn btn-danger change-task-status {{instance._disabled}}" data-name="status" data-value="InProgress">Decline</button>
                  <button class="btn btn-success change-task-status {{instance._disabled}}" data-name="status" data-value="Verified">Verify</button>
                {{/status}}
                {{#if_equals instance.status 'Verified'}}
                  <span class="task-done">
                    <em>Verified</em>
                  </span>
                {{/if_equals}}
                {{#instance._undo.0}}
                  <a href="javascript://" data-name="status" data-value="{{instance._undo.0}}" data-undo="true" class="undo {{instance._disabled}}">Undo</a>
                {{/instance._undo.0}}
              </div>
            </li>
          </ul>

          <div class="item-data">
            <div class="tree-title-area">
              {{instance.title}}
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  {{#if expanded}}
  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">

      <div class="row-fluid">
        <div class="span6">
          {{#if instance.viewLink}}
            {{#is_allowed "view_instance_page" instance}}
              <a href="{{instance.viewLink}}" class="info-action">
                View {{instance.class.title_singular}}
                <i class="grcicon-goto"></i>
              </a>
            {{/is_allowed}}
          {{/if}}
        </div>
      </div>

      <div class="show-description">
        <div class="row-fluid">
          <div class="span12">
            <div class="tree-description short">
              <h5>{{instance.title}}</h5>
              {{{instance.description}}}
            </div>
            {{{show_long}}}
          </div>
        </div>
      </div>

    </div>

    {{#if draw_children}}
      {{#prune_context}} {{! this line is just chopping the context stack down to one element}}
          {{#child_options}}
            <div class="inner-tree">
              <h6>{{firstnonempty title_plural model.title_plural}} ({{list.length}})
              {{{renderLive '/static/mustache/base_objects/relevance_action.mustache' list=original_list parent_instance=instance model=model multiple_mapping_case=true}}}
              </h6>
              <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
            </div>
          {{/child_options}}
      {{/prune_context}}
    {{/if}}

  </div>
  {{/if}}
</li>
