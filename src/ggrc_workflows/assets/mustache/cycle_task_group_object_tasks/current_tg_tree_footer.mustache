{{^if_equals parent_instance.status 'Final'}}
  {{#with_mapping 'current_task_group_objects' parent_instance}}
    <li class="tree-footer tree-item tree-item-add">
      <div class="row-fluid">
        <div class="span12">
          <a href="javascript://" class="section-create" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="CycleTask" data-object-plural="cycle_task_group_object_tasks" data-object-params='{ \
            "cycle_task_group_object": {{current_task_group_objects.0.instance.id}}, \
            "cycle": {{current_task_group_objects.0.instance.cycle.id}}, \
            "task_group": {{current_task_group_objects.0.instance.cycle.id}}, \
            "sort_index": "{{sort_index_at_end original_list}}", \
            "contact": { "id" : {{parent_instance.owners.0.id}} , "type": "Person" }, \
            "owners": [{ "id" : {{firstexist parent_instance.owners.0.id "null"}} , "type": "Person" }], \
            "modal_title": "Add Task" }'>
            <strong>Add Task</strong>
          </a>
        </div>
      </div>
    </li>
  {{/with_mapping}}
{{/if_equals}}
