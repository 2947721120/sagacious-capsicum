<div class="advanced-filters search-filters">
  <form class="form-search" onsubmit="return false" autocomplete="off">
    <div class="row-fluid">
      <div class="span9">
        Status:
        <select data-filter="status">
          <option value="all">All</option>
          <option value="Verified">Verified</option>
          <option value="Finished">Finished</option>
          <option value="InProgress">In Progress</option>
          <option value="Assigned">Assigned</option>
        </select>
        Overdue:
        <select data-filter="overdue">
          <option value="all">All</option>
          <option value="overdue">Overdue</option>
          <option value="">Not Overdue</option>
        </select>
      </div>
      <div class="span3">
        <button class="btn" custom-event="show-history"
          mapping="{{toggle_string mapping '_with_history'}}"
          style="float:right;"
          >
          <i class="grcicon-history-color" style="margin-top:0px;"></i>
          {{#if_match mapping '.*_with_history'}}
            Hide History
          {{else}}
            Show History
          {{/if_equals}}
        </button>
      </div>
    </div>
  </form>
</div>
