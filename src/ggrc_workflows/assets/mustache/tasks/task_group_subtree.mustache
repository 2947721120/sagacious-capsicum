  <li data-object-id="{{instance.id}}" data-object-type="{{instance.class.table_singular}}">
    <div class="item-main objective-selector field-wrap task-wrap" data-model="true" {{#instance}}{{data "model"}}{{/instance}}>
      <a class="drag {{#parent_instance.lock_task_order}}disabled{{/parent_instance.lock_task_order}}" href="javascript://"><i class="grcicon-drag"></i></a>
      {{#with_page_object_as "page_instance"}}
      {{#with_mapping 'tasks' page_instance}}
      <ggrc-quick-update parent_instance="page_instance" instance="instance" source_mapping="tasks">
        {{#using task=instance.task}}
          <input tabindex="3" type="text" name="task" class="editTitle search-icon autocomplete" placeholder="Select Object" value="{{task.title}}" data-mapping="tasks" {{mapping_autocomplete}}>
        {{/using}}
        <span class="required">*</span>
      </ggrc-quick-update>
      {{/with_mapping}}
      {{/with_page_object_as}}
      {{#if allow_mapping}}
      {{#if mappings}}
      {{#is_allowed_all 'delete' mappings}}
      <a href="javascript://" {{^parent_instance.lock_task_order}}data-toggle="unmap"{{/parent_instance.lock_task_order}} data-id="{{instance.id}}" data-type="{{instance.class.shortName}}" class="deleteTrigger {{#parent_instance.lock_task_order}}disabled{{/parent_instance.lock_task_order}}"><i class="grcicon-deleted"></i>
        {{#result}}<span class="result" {{data 'result'}}></span>{{/result}}
      </a>
      {{/is_allowed_all}}
      {{/if}}
      {{/if}}
    </div>
  </li>
