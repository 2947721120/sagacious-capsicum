<form action="javascript://">
  <div class="row-fluid">
    <div class="span8">
      <label>
        Summary
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
      </label>
      <input class="input-block-level required" id="task-title" placeholder="Enter Title" name="title" type="text" value="{{instance.title}}" tabindex="1">
      <br>
    </div>
    <div class="span4">
      {{#if_helpers '\
        ^if' instance.id '\
        and ^if' object_params.workflow}}
        {{#using workflow=instance.workflow}}
        <label>
          Workflow
          <span class="required">*</span>
          <i class="grcicon-help-black" rel="tooltip" title="Workflow containing this Task Group"></i>
        </label>
        <input tabindex="4" class="input-block-level" name="workflow.title" data-lookup="Workflow" data-template="/workflows/autocomplete_result.mustache" placeholder="Choose Workflow" type="text" value="{{firstexist workflow.title ''}}" />
        {{/using}}
      {{else}}
        &nbsp;
        <input id="workflow_id" name="workflow" type="hidden" model="Workflow" value="{{firstnonempty instance.workflow.id object_params.workflow}}">
        Workflow
        {{#using workflow=instance.workflow}}
          <div>{{{workflow.title}}</div>
        {{/using}}
      {{/if_helpers}}
    </div>
  </div>

  <div class="row-fluid">
    <div class="span8">
      <label for="program_description">
        Details
        <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
      </label>
      <div class="wysiwyg-area">
        <textarea id="program_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description" tabindex="2">{{instance.description}}</textarea>
      </div>
    </div>
    <div class="span4">
      <label for="task_group_assignee">Assignee:</label>
        {{#using assignee=instance.contact}}
        <div class="objective-selector">
          <input id="task_group_assignee" tabindex="7" type="text" name="contact.email" class="span10 search-icon" data-lookup="Person" placeholder="Enter text to search for Assignee" value="{{firstnonempty assignee.email ''}}">
        </div>
        {{/using}}
    </div>
    <div class="span4">
      <label>
        Planned End Date 
      </label>
      <input class="input-block-level date" name="end_date" data-toggle="datepicker" placeholder="MM/DD/YYYY" type="text" value="{{localize_date end_date}}">
    </div>
  </div>
</form>
