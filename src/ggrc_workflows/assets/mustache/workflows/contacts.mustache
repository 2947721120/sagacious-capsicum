{{#instance}}
<div class="row-fluid">
  <div class="span12">
    <h6>Owner</h6>
    <p class="oneline">
    {{#with_mapping 'authorizations' instance}}
      {{#each authorizations}}
        <span>
          {{#using role=instance.role}}
            {{#if_equals role.name 'WorkflowOwner'}}
              {{#using contact=instance.person}}
                {{{renderLive '/static/mustache/people/popover.mustache' person=contact}}}
              {{/using}}
            {{/if_equals}}
          {{/using}}
        </span>
      {{/each}}
    {{/with_mapping}}
  </p>
  </div>
</div>
{{/instance}}
