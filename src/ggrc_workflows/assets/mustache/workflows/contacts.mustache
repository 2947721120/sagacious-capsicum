{{#instance}}
<div class="row-fluid">
  <div {{^if stacked}}class="span6"{{/if}}>
  <p>
    <strong>Owner:</strong>
    <br>
    {{#with_mapping 'authorizations' instance}}
      {{#each authorizations}}
        {{#using role=instance.role}}
          {{#if_equals role.name 'WorkflowOwner'}}
            {{#using contact=instance.person}}
              {{{renderLive '/static/mustache/people/popover.mustache' person=contact}}}
            {{/using}}
          {{/if_equals}}
        {{/using}}
      {{/each}}
    {{/with_mapping}}
  </p>
  </div>
  {{#using person=contact}}
    <div {{^if stacked}}class="span6"{{/if}}>
    {{#if person}}
      <p>
        <strong>Contact</strong>
        <br>
        {{{renderLive '/static/mustache/people/popover.mustache' person=person}}}
      </p>
    {{else}}
      <p>
        <strong>Contact</strong>
        <br>
        <span class="error">
          Not Assigned
        </span>
      </p>
    {{/if}}
    </div>
  {{/using}}
</div>
{{/instance}}
