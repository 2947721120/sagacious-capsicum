{{#instance}}
{{!div class="extended"}}
  <div class="row-fluid">
    <div class="span12">
      {{#if_equals instance.type 'Person'}}
        <a class="main-title {{class.category}} oneline" href="{{viewLink}}">
          {{name}}
          {{#is_private}}
            <i class="grcicon-private" rel="tooltip" title="Private"></i>
          {{/is_private}}
          <i class="grcicon-goto"></i>
        </a>
      {{else}}
        <a class="main-title {{class.category}} oneline" href="{{viewLink}}">
          {{title}}
          {{#is_private}}
            <i class="grcicon-private" rel="tooltip" title="Private"></i>
          {{/is_private}}
          <i class="grcicon-goto"></i>
        </a>
      {{/if_equals}}
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      {{^if_equals instance.class.table_singular 'person'}}
        <div class="rtf">
          <p>
            {{{firstnonempty description '<i>No description</i>'}}}
          </p>
        </div>
      {{/if_equals}}

      {{#if_equals instance.class.table_singular 'person'}}
        <div class="extended-info-contact">
          <div class="row-fluid">
            <div class="span6">
              {{#if email}}
                <p>
                  <strong>Email: </strong>
                  <br>
                  <a class="url oneline" href="mailto:{{email}}" target="_blank">
                    {{email}}
                  </a>
                </p>
              {{else}}
                <p>
                  <strong>Email: </strong>
                  <br>
                  <span class="error">No Email</span>
                </p>
              {{/if}}
            </div>
            <div class="span6">
              {{#if company.length}}
                <p>
                  <strong>Company: </strong>
                  <br>
                  {{company}}
                </p>
              {{/if}}
            </div>
          </div>
        </div>
      {{/if_equals}}
    </div>
  </div>

  {{^if_equals instance.class.table_singular 'person'}}
    <div class="row-fluid">
      <div class="span12">
        <div class="code">
          Code: {{slug}}
        </div>
      </div>
    </div>
  {{/if_equals}}
  <div class="links">
    <div class="row-fluid">
      <div class="span6">
        <a class="secondary" href="{{viewLink}}">
          View {{class.title_singular}}
        </a>
      </div>
      <div class="span6">
      {{#with_page_object_as 'page_instance'}}
        {{^if_equals instance page_instance}}
          {{#with_direct_mappings_as 'mappings' page_instance instance}}
            {{#if mappings.length}}
              <span class="primary">
                <i class="grcicon-checked"></i>
                Relevant to this {{#page_instance.class.title_singular}}{{toLowerCase}}{{/page_instance.class.title_singular}}
              </span>
            {{else}}
              {{#is_allowed_to_map page_instance instance join=true}}
              {{#if_helpers '\
                ^if_instance_of' page_instance 'Directive' '\
                or ^if_instance_of' instance 'Section'}}
              <a class="primary map-to-page-object" href="javascript://" data-follow="true" {{#instance}}{{data 'instance'}}{{/instance}}>
                <i class="grcicon-reg-map"></i>
                Map to this {{#page_instance.class.title_singular}}{{toLowerCase}}{{/page_instance.class.title_singular}}
              </a>
              {{/if_helpers}}
              {{/is_allowed_to_map}}
            {{/if}}
          {{/with_direct_mappings_as}}
        {{/if_equals}}
      {{/with_page_object_as}}
      </div>
    </div>
  </div>
{{!/div}}
{{/instance}}
