  <li class="filters" data-for="{{model.model_singular}}">
    <a href="javascript://" class="wf-trigger wf-active {{#if_equals filter_params.Workflow.status 'Active'}}active{{/if_equals}}" data-key="status" data-value="Active">
      Active
      ({{firstnonempty counts.Workflow_Active 0}})
    </a>
    <a href="javascript://" class="wf-trigger wf-draft {{#if_equals filter_params.Workflow.status 'Draft'}}active{{/if_equals}}" data-key="status" data-value="Draft">
      Draft
      ({{firstnonempty counts.Workflow_Draft 0}})
    </a>
    <a href="javascript://" class="wf-trigger wf-inactive {{#if_equals filter_params.Workflow.status 'Inactive'}}active{{/if_equals}}" data-key="status" data-value="Inactive">
      Inactive
      ({{firstnonempty counts.Workflow_Inactive 0}})
    </a>
  </li>

  {{#list}}
    <li class="{{class.category}} {{status}}" data-model="true" {{data 'model'}}>
      <a href="{{viewLink}}" class="show-extended">
        <div class="lhs-main-title">
          <span class="lhs-item lhs-item-long">
            {{title}}
          </span>
        </div>
      </a>
    </li>
  {{/list}}

  {{^list}}
    <li class="spinner">
    </li>
  {{/list}}

  {{^is_allowed 'read' model.shortName context='any'}}
    <li class="no-access">
      You do not have access to read this information.
    </li>
  {{/is_allowed}}

  {{#list.is_loading}}
    <li class="spinner">
      <span {{attach_spinner '{ "radius": 4, "length": 4, "width": 2 }' 'display:inline-block;' }}></span>
    </li>
  {{/list.is_loading}}
