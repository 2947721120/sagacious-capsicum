{{! upload evidence to GDrive by clicking this button}}
{{#if allow_mapping_or_creating}}
{{#is_allowed_to_map parent_instance "Document"}}
{{#with_page_object_as 'page_object'}}
{{#if_match page_object.constructor.shortName 'Audit|Program|Person'}}
<li class="tree-footer tree-item tree-item-add">
  <div class="row-fluid">
    <div class="span12">

      <a
        href="javascript://"
        data-placement="left"
        data-toggle="gdrive-picker"
        data-response-id="{{parent_instance.id}}"
        title="Upload Evidence"
        >
        + Upload Evidence
      </a>

    </div>
  </div>
</li>
{{/if_match}}
{{/with_page_object_as}}
{{/is_allowed_to_map}}
{{/if}}
