<div class="search-title">
  <div class="row-fluid">
    <div class="span6">
      <h4>
        Roles ({{ options.length }})
      </h4>
    </div>
    <div class="span6">
      <div class="guide">
        &nbsp;
      </div>
    </div>
  </div>
</div>
<div class="selector-list">
  <ul class="new-tree tree-structure">
    {{#options}}
    <li class="tree-item" {{ data 'option' }} data-id="{{ id }}">
      <div class="item-main">
        <div class="simple-link">
          <div class="row-fluid">
            <div class="span11">
              <div class="openclose">
                <div class="item-data">
                  <div class="tree-title-area">
                    {{name}}
                  </div>
                </div>
              </div>
            </div>
            <div class="span1">
              <input type="checkbox" rel="tooltip" title="map">
            </div>
          </div>
        </div>
      </div>
      <div class="tier-2-info item-content">
        <div class="tier-2-info-content">
          <p>{{{description}}}</p>
          {{#scope}}<p><strong>Role Scope:</strong> {{scope}}</p>{{/scope}}
        </div>
      </div>
    </li>
    {{/options}}
  </ul>
</div>
